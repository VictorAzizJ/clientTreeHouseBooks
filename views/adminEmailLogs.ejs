<!-- views/adminEmailLogs.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Email Logs - Admin - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
</head>
<body>
  <%- include('partials/nav') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-list-ul"></i> Email Send Logs</h1>
        <p class="text-muted">Monitor email delivery status and troubleshoot issues</p>
      </div>
      <a href="/admin/email-templates" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Templates
      </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
      <div class="card-body">
        <form method="GET" class="row g-3 align-items-end">
          <div class="col-md-3">
            <label for="status" class="form-label">Status</label>
            <select class="form-select" id="status" name="status">
              <option value="">All Statuses</option>
              <option value="sent" <%= filters.status === 'sent' ? 'selected' : '' %>>Sent</option>
              <option value="failed" <%= filters.status === 'failed' ? 'selected' : '' %>>Failed</option>
              <option value="skipped" <%= filters.status === 'skipped' ? 'selected' : '' %>>Skipped</option>
            </select>
          </div>
          <div class="col-md-3">
            <label for="templateKey" class="form-label">Template</label>
            <select class="form-select" id="templateKey" name="templateKey">
              <option value="">All Templates</option>
              <% templates.forEach(function(t) { %>
                <option value="<%= t.templateKey %>" <%= filters.templateKey === t.templateKey ? 'selected' : '' %>>
                  <%= t.name %>
                </option>
              <% }); %>
            </select>
          </div>
          <div class="col-md-2">
            <label for="limit" class="form-label">Show</label>
            <select class="form-select" id="limit" name="limit">
              <option value="50" <%= filters.limit == 50 ? 'selected' : '' %>>50 records</option>
              <option value="100" <%= (!filters.limit || filters.limit == 100) ? 'selected' : '' %>>100 records</option>
              <option value="250" <%= filters.limit == 250 ? 'selected' : '' %>>250 records</option>
            </select>
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">
              <i class="bi bi-filter"></i> Filter
            </button>
          </div>
          <div class="col-md-2">
            <a href="/admin/email-logs" class="btn btn-outline-secondary w-100">Clear</a>
          </div>
        </form>
      </div>
    </div>

    <!-- Stats Summary -->
    <div class="row mb-4">
      <%
        const sentCount = logs.filter(l => l.status === 'sent').length;
        const failedCount = logs.filter(l => l.status === 'failed').length;
        const skippedCount = logs.filter(l => l.status === 'skipped').length;
      %>
      <div class="col-md-4">
        <div class="card bg-success text-white">
          <div class="card-body text-center">
            <h3 class="mb-0"><%= sentCount %></h3>
            <small>Sent Successfully</small>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card bg-danger text-white">
          <div class="card-body text-center">
            <h3 class="mb-0"><%= failedCount %></h3>
            <small>Failed</small>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card bg-secondary text-white">
          <div class="card-body text-center">
            <h3 class="mb-0"><%= skippedCount %></h3>
            <small>Skipped</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Logs Table -->
    <div class="card">
      <div class="card-body p-0">
        <% if (!logs || logs.length === 0) { %>
          <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3">No Email Logs Found</h4>
            <p class="text-muted">Email send attempts will appear here once emails are triggered.</p>
          </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>Time</th>
                  <th>Status</th>
                  <th>Template</th>
                  <th>Recipient</th>
                  <th>Subject</th>
                  <th>Details</th>
                </tr>
              </thead>
              <tbody>
                <% logs.forEach(function(log) { %>
                  <tr>
                    <td class="text-nowrap">
                      <small>
                        <%= new Date(log.sentAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                        <br>
                        <span class="text-muted">
                          <%= new Date(log.sentAt).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %>
                        </span>
                      </small>
                    </td>
                    <td>
                      <% if (log.status === 'sent') { %>
                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Sent</span>
                      <% } else if (log.status === 'failed') { %>
                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Failed</span>
                      <% } else { %>
                        <span class="badge bg-secondary"><i class="bi bi-skip-forward"></i> Skipped</span>
                      <% } %>
                    </td>
                    <td>
                      <code class="small"><%= log.templateKey || 'N/A' %></code>
                    </td>
                    <td>
                      <small><%= log.recipient %></small>
                    </td>
                    <td>
                      <small class="text-truncate d-inline-block" style="max-width: 200px;" title="<%= log.subject %>">
                        <%= log.subject || '-' %>
                      </small>
                    </td>
                    <td>
                      <% if (log.status === 'sent' && log.messageId) { %>
                        <small class="text-muted" title="Message ID: <%= log.messageId %>">
                          <i class="bi bi-info-circle"></i> ID: <%= log.messageId.substring(0, 15) %>...
                        </small>
                      <% } else if (log.error) { %>
                        <small class="text-danger" title="<%= log.error %>">
                          <i class="bi bi-exclamation-triangle"></i>
                          <%= log.error.length > 50 ? log.error.substring(0, 50) + '...' : log.error %>
                        </small>
                      <% } else { %>
                        -
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>

    <div class="mt-4 text-muted small">
      <i class="bi bi-info-circle"></i> Showing <%= logs.length %> most recent log entries.
      Logs are automatically created when emails are triggered.
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
