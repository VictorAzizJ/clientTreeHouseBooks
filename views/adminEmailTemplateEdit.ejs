<!-- views/adminEmailTemplateEdit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Email Template - Admin - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <style>
    .preview-frame {
      border: 1px solid #dee2e6;
      border-radius: 4px;
      background: white;
      min-height: 400px;
    }
    .code-textarea {
      font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
      font-size: 13px;
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>

  <div class="container mt-4">
    <div class="mb-4">
      <a href="/admin/email-templates" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Back to Templates
      </a>
    </div>

    <h1><i class="bi bi-pencil-square"></i> Edit Email Template</h1>
    <p class="text-muted">Editing: <strong><%= template.name %></strong> (<code><%= template.templateKey %></code>)</p>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <form action="/admin/email-templates/<%= template._id %>" method="POST">
      <div class="row">
        <!-- Left column: Form fields -->
        <div class="col-lg-6">
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="mb-0">Template Settings</h5>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <label for="name" class="form-label">Template Name</label>
                <input type="text" class="form-control" id="name" name="name"
                       value="<%= template.name %>" required>
              </div>

              <div class="mb-3">
                <label for="subject" class="form-label">Email Subject</label>
                <input type="text" class="form-control" id="subject" name="subject"
                       value="<%= template.subject %>" required>
                <div class="form-text">You can use placeholders like {{donorName}} in the subject</div>
              </div>

              <div class="mb-3">
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" id="isActive" name="isActive"
                         value="true" <%= template.isActive ? 'checked' : '' %>>
                  <label class="form-check-label" for="isActive">
                    <strong>Template Active</strong> - Emails will be sent when triggered
                  </label>
                </div>
              </div>
            </div>
          </div>

          <% if (template.availablePlaceholders && template.availablePlaceholders.length > 0) { %>
            <div class="card mb-4">
              <div class="card-header">
                <h5 class="mb-0">Available Placeholders</h5>
              </div>
              <div class="card-body">
                <p class="small text-muted">Click to copy. Use these in your subject and body.</p>
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Placeholder</th>
                      <th>Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% template.availablePlaceholders.forEach(function(ph) { %>
                      <tr>
                        <td>
                          <code class="placeholder-copy" style="cursor: pointer;"
                                onclick="copyPlaceholder('<%= ph.placeholder %>')">
                            <%= ph.placeholder %>
                          </code>
                        </td>
                        <td class="small"><%= ph.description %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          <% } %>
        </div>

        <!-- Right column: HTML Body -->
        <div class="col-lg-6">
          <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">HTML Body</h5>
              <button type="button" class="btn btn-sm btn-outline-secondary" onclick="togglePreview()">
                <i class="bi bi-eye"></i> Preview
              </button>
            </div>
            <div class="card-body">
              <textarea class="form-control code-textarea" id="htmlBody" name="htmlBody"
                        rows="20" required><%= template.htmlBody %></textarea>
            </div>
          </div>
        </div>
      </div>

      <!-- Plain Text Body (collapsible) -->
      <div class="card mb-4">
        <div class="card-header">
          <button class="btn btn-link text-decoration-none p-0" type="button"
                  data-bs-toggle="collapse" data-bs-target="#textBodyCollapse">
            <i class="bi bi-chevron-down"></i> Plain Text Body (optional fallback)
          </button>
        </div>
        <div class="collapse" id="textBodyCollapse">
          <div class="card-body">
            <textarea class="form-control code-textarea" id="textBody" name="textBody"
                      rows="10"><%= template.textBody || '' %></textarea>
            <div class="form-text">
              Plain text version shown when HTML is not supported. If empty, email clients may auto-generate from HTML.
            </div>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-between">
        <a href="/admin/email-templates" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-check-lg"></i> Save Template
        </button>
      </div>
    </form>

    <!-- Preview Modal -->
    <div class="modal fade" id="previewModal" tabindex="-1">
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Email Preview</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <strong>Subject:</strong> <span id="previewSubject"></span>
            </div>
            <iframe id="previewFrame" class="preview-frame w-100" style="height: 500px;"></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function copyPlaceholder(text) {
      navigator.clipboard.writeText(text).then(() => {
        // Brief visual feedback
        const el = event.target;
        const original = el.textContent;
        el.textContent = 'Copied!';
        setTimeout(() => { el.textContent = original; }, 1000);
      });
    }

    function togglePreview() {
      const modal = new bootstrap.Modal(document.getElementById('previewModal'));
      const htmlBody = document.getElementById('htmlBody').value;
      const subject = document.getElementById('subject').value;

      // Replace placeholders with sample data for preview
      const sampleData = {
        '{{donorName}}': 'Jane Smith',
        '{{bookCount}}': '5',
        '{{donationDate}}': new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }),
        '{{memberName}}': 'John Doe',
        '{{notes}}': 'Sample notes here',
        '{{genres}}': 'Fiction, Children\'s'
      };

      let previewHtml = htmlBody;
      let previewSubject = subject;

      for (const [placeholder, value] of Object.entries(sampleData)) {
        const regex = new RegExp(placeholder.replace(/[{}]/g, '\\$&'), 'g');
        previewHtml = previewHtml.replace(regex, value);
        previewSubject = previewSubject.replace(regex, value);
      }

      // Remove unmatched conditionals
      previewHtml = previewHtml.replace(/\{\{#if \w+\}\}([\s\S]*?)\{\{\/if\}\}/g, '$1');

      document.getElementById('previewSubject').textContent = previewSubject;

      const iframe = document.getElementById('previewFrame');
      iframe.srcdoc = previewHtml;

      modal.show();
    }
  </script>
</body>
</html>
