<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Visitor Check-In - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <style>
    .member-search-results {
      position: absolute;
      z-index: 1000;
      width: 100%;
      max-height: 300px;
      overflow-y: auto;
      background: white;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      display: none;
    }
    .member-search-item {
      padding: 10px;
      cursor: pointer;
      border-bottom: 1px solid #eee;
    }
    .member-search-item:hover {
      background-color: #f8f9fa;
    }
    .checkin-mode {
      display: none;
    }
    .checkin-mode.active {
      display: block;
    }
    .mode-tabs .nav-link.active {
      background-color: var(--thb-primary);
      color: white;
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-person-check"></i> Visitor Check-In</h1>
        <p class="text-muted">Check in visitors to TreeHouseBooks</p>
      </div>
      <a href="/dashboard" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
      </a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <!-- Mode Selection -->
    <ul class="nav nav-tabs mode-tabs mb-4" role="tablist">
      <li class="nav-item">
        <button class="nav-link active" data-mode="existing" onclick="switchMode('existing')">
          <i class="bi bi-search"></i> Returning Visitor
        </button>
      </li>
      <li class="nav-item">
        <button class="nav-link" data-mode="new" onclick="switchMode('new')">
          <i class="bi bi-person-plus"></i> New Visitor
        </button>
      </li>
    </ul>

    <!-- Existing Member Check-in -->
    <div id="existingMode" class="checkin-mode active">
      <div class="card">
        <div class="card-header" style="background-color: var(--thb-primary); color: white;">
          <h5 class="mb-0"><i class="bi bi-search"></i> Find Existing Member</h5>
        </div>
        <div class="card-body">
          <form method="POST" action="/visitor-checkin">
            <div class="mb-3 position-relative">
              <label for="memberSearch" class="form-label">Search by name or email</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="memberSearch"
                placeholder="Start typing to search..."
                autocomplete="off"
              >
              <div id="searchResults" class="member-search-results"></div>
              <input type="hidden" id="memberId" name="memberId">
            </div>

            <div id="selectedMember" style="display:none;">
              <div class="alert alert-success">
                <h5><i class="bi bi-person-check"></i> <span id="selectedMemberName"></span></h5>
                <p class="mb-0 small text-muted" id="selectedMemberEmail"></p>
              </div>

              <div class="mb-3">
                <label for="notes" class="form-label">Notes (Optional)</label>
                <textarea class="form-control" id="notes" name="notes" rows="2" placeholder="Any additional notes..."></textarea>
              </div>

              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success btn-lg">
                  <i class="bi bi-check-circle"></i> Check In
                </button>
                <button type="button" class="btn btn-outline-secondary" onclick="clearSelection()">
                  Cancel
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- New Visitor Check-in -->
    <div id="newMode" class="checkin-mode">
      <div class="card">
        <div class="card-header" style="background-color: var(--thb-secondary); color: white;">
          <h5 class="mb-0"><i class="bi bi-person-plus"></i> Register New Visitor</h5>
        </div>
        <div class="card-body">
          <form method="POST" action="/visitor-checkin">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="firstName" class="form-label">First Name *</label>
                <input type="text" class="form-control" id="firstName" name="firstName" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="lastName" class="form-label">Last Name *</label>
                <input type="text" class="form-control" id="lastName" name="lastName" required>
              </div>
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">Email (Optional)</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com">
              <small class="text-muted">If provided, we can look up their record on future visits</small>
            </div>

            <div class="mb-3">
              <label for="newNotes" class="form-label">Notes (Optional)</label>
              <textarea class="form-control" id="newNotes" name="notes" rows="2" placeholder="Any additional notes..."></textarea>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-check-circle"></i> Register & Check In
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let debounceTimer;
    const searchInput = document.getElementById('memberSearch');
    const searchResults = document.getElementById('searchResults');
    const memberIdInput = document.getElementById('memberId');
    const selectedMemberDiv = document.getElementById('selectedMember');
    const selectedMemberName = document.getElementById('selectedMemberName');
    const selectedMemberEmail = document.getElementById('selectedMemberEmail');

    function switchMode(mode) {
      // Update tabs
      document.querySelectorAll('.mode-tabs .nav-link').forEach(tab => {
        tab.classList.toggle('active', tab.dataset.mode === mode);
      });

      // Update content
      document.querySelectorAll('.checkin-mode').forEach(content => {
        content.classList.remove('active');
      });
      document.getElementById(mode + 'Mode').classList.add('active');

      // Clear selections
      clearSelection();
    }

    searchInput.addEventListener('input', function() {
      const query = this.value.trim();

      clearTimeout(debounceTimer);

      if (query.length < 2) {
        searchResults.style.display = 'none';
        return;
      }

      debounceTimer = setTimeout(async () => {
        try {
          const response = await fetch(`/api/members/search?q=${encodeURIComponent(query)}`);
          const members = await response.json();

          if (members.length === 0) {
            searchResults.innerHTML = '<div class="member-search-item text-muted">No members found - try "New Visitor" tab</div>';
            searchResults.style.display = 'block';
            return;
          }

          searchResults.innerHTML = members.map(member => {
            const name = `${member.firstName} ${member.lastName}`;
            const email = member.email || '';
            return `
              <div class="member-search-item"
                   data-id="${member._id}"
                   data-name="${encodeURIComponent(name)}"
                   data-email="${encodeURIComponent(email)}">
                <strong>${escapeHtml(name)}</strong>
                ${email ? `<br><small class="text-muted">${escapeHtml(email)}</small>` : ''}
              </div>
            `;
          }).join('');

          searchResults.querySelectorAll('.member-search-item').forEach(item => {
            item.addEventListener('click', function() {
              selectMember(
                this.dataset.id,
                decodeURIComponent(this.dataset.name),
                decodeURIComponent(this.dataset.email)
              );
            });
          });

          searchResults.style.display = 'block';
        } catch (err) {
          console.error('Search failed:', err);
        }
      }, 300);
    });

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function selectMember(id, name, email) {
      memberIdInput.value = id;
      selectedMemberName.textContent = name;
      selectedMemberEmail.textContent = email || 'No email on file';
      selectedMemberDiv.style.display = 'block';
      searchInput.style.display = 'none';
      searchResults.style.display = 'none';
    }

    function clearSelection() {
      memberIdInput.value = '';
      selectedMemberDiv.style.display = 'none';
      searchInput.style.display = 'block';
      searchInput.value = '';
      searchResults.style.display = 'none';
    }

    document.addEventListener('click', function(e) {
      if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
        searchResults.style.display = 'none';
      }
    });
  </script>
</body>
</html>
