<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Visitor Check-In - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <style>
    .member-search-results {
      position: absolute;
      z-index: 1000;
      width: 100%;
      max-height: 300px;
      overflow-y: auto;
      background: white;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      display: none;
    }
    .member-search-item {
      padding: 10px;
      cursor: pointer;
      border-bottom: 1px solid #eee;
    }
    .member-search-item:hover {
      background-color: #f8f9fa;
    }
    .checkin-mode {
      display: none;
    }
    .checkin-mode.active {
      display: block;
    }
    .mode-tabs .nav-link.active {
      background-color: var(--thb-primary);
      color: white;
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-person-check"></i> Visitor Check-In</h1>
        <p class="text-muted">Check in visitors to TreeHouseBooks</p>
      </div>
      <a href="/dashboard" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
      </a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <!-- Mode Selection -->
    <ul class="nav nav-tabs mode-tabs mb-4" role="tablist">
      <li class="nav-item">
        <button class="nav-link active" data-mode="existing" onclick="switchMode('existing')">
          <i class="bi bi-search"></i> Returning Visitor
        </button>
      </li>
      <li class="nav-item">
        <button class="nav-link" data-mode="new" onclick="switchMode('new')">
          <i class="bi bi-person-plus"></i> New Visitor
        </button>
      </li>
    </ul>

    <!-- Existing Member Check-in -->
    <div id="existingMode" class="checkin-mode active">
      <div class="card">
        <div class="card-header" style="background-color: var(--thb-primary); color: white;">
          <h5 class="mb-0"><i class="bi bi-search"></i> Find Existing Member</h5>
        </div>
        <div class="card-body">
          <form method="POST" action="/visitor-checkin">
            <div class="mb-3 position-relative">
              <label for="memberSearch" class="form-label">Search by name or email</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="memberSearch"
                placeholder="Start typing to search..."
                autocomplete="off"
              >
              <div id="searchResults" class="member-search-results"></div>
              <input type="hidden" id="memberId" name="memberId">
            </div>

            <div id="selectedMember" style="display:none;">
              <div class="alert alert-success">
                <h5><i class="bi bi-person-check"></i> <span id="selectedMemberName"></span></h5>
                <p class="mb-0 small text-muted" id="selectedMemberEmail"></p>
              </div>

              <div class="mb-3">
                <label for="notes" class="form-label">Notes (Optional)</label>
                <textarea class="form-control" id="notes" name="notes" rows="2" placeholder="Any additional notes..."></textarea>
              </div>

              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success btn-lg">
                  <i class="bi bi-check-circle"></i> Check In
                </button>
                <button type="button" class="btn btn-outline-secondary" onclick="clearSelection()">
                  Cancel
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- New Visitor Check-in -->
    <div id="newMode" class="checkin-mode">
      <div class="card">
        <div class="card-header" style="background-color: var(--thb-secondary); color: white;">
          <h5 class="mb-0"><i class="bi bi-person-plus"></i> Register New Visitor</h5>
        </div>
        <div class="card-body">
          <form method="POST" action="/visitor-checkin" id="newVisitorForm">
            <!-- Member Type Selection -->
            <div class="mb-3">
              <label class="form-label">Member Type</label>
              <div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="memberType" id="newTypeAdult" value="adult" checked>
                  <label class="form-check-label" for="newTypeAdult">Adult</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="memberType" id="newTypeChild" value="child">
                  <label class="form-check-label" for="newTypeChild">Child</label>
                </div>
              </div>
              <small class="text-muted">Select "Child" for students who need to be linked to a parent/guardian</small>
            </div>

            <!-- Name Fields -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="newFirstName" class="form-label">First Name *</label>
                <input type="text" class="form-control" id="newFirstName" name="firstName" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="newLastName" class="form-label">Last Name *</label>
                <input type="text" class="form-control" id="newLastName" name="lastName" required>
              </div>
            </div>

            <!-- Date of Birth (shown only for children) -->
            <div class="mb-3 new-child-field" id="newDobField" style="display: none;">
              <label for="newDateOfBirth" class="form-label">Date of Birth *</label>
              <input id="newDateOfBirth" name="dateOfBirth" type="date" class="form-control">
              <small class="text-muted">Required for child members to track age</small>
            </div>

            <!-- Parent Selection (shown only for children) -->
            <div class="mb-3 new-child-field" id="newParentField" style="display: none;">
              <label for="newParent" class="form-label">Parent/Guardian (Optional)</label>
              <select id="newParent" name="parent" class="form-control">
                <option value="">Select a parent/guardian...</option>
              </select>
              <small class="text-muted">Optionally link this child to an existing adult member</small>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="newEmail" class="form-label">
                Email <span class="text-muted">(optional)</span>
              </label>
              <input type="email" class="form-control" id="newEmail" name="email" placeholder="email@example.com">
              <small class="text-muted">Helps identify returning members</small>
            </div>

            <!-- Phone -->
            <div class="mb-3">
              <label for="newPhone" class="form-label">Phone</label>
              <input type="tel" class="form-control" id="newPhone" name="phone" placeholder="(123) 456-7890">
            </div>

            <!-- Zip Code (shown for all) -->
            <div class="mb-3">
              <label for="newZipCode" class="form-label">Zip Code</label>
              <input type="text" class="form-control" id="newZipCode" name="zipCode" placeholder="12345 or 12345-6789">
            </div>

            <!-- Full Address (Staff/Admin only) -->
            <% if (user.role === 'staff' || user.role === 'admin') { %>
              <div class="mb-3">
                <label for="newAddress" class="form-label">Full Address (Staff/Admin Only)</label>
                <textarea id="newAddress" name="address" class="form-control" rows="2" placeholder="Street, City, State"></textarea>
                <small class="text-muted">Only staff and admin can enter full addresses</small>
              </div>
            <% } %>

            <!-- Notes -->
            <div class="mb-3">
              <label for="newNotes" class="form-label">Visit Notes (Optional)</label>
              <textarea class="form-control" id="newNotes" name="notes" rows="2" placeholder="Any additional notes about this visit..."></textarea>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-check-circle"></i> Register & Check In
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
  <script>
    let debounceTimer;
    const searchInput = document.getElementById('memberSearch');
    const searchResults = document.getElementById('searchResults');
    const memberIdInput = document.getElementById('memberId');
    const selectedMemberDiv = document.getElementById('selectedMember');
    const selectedMemberName = document.getElementById('selectedMemberName');
    const selectedMemberEmail = document.getElementById('selectedMemberEmail');

    function switchMode(mode) {
      // Update tabs
      document.querySelectorAll('.mode-tabs .nav-link').forEach(tab => {
        tab.classList.toggle('active', tab.dataset.mode === mode);
      });

      // Update content
      document.querySelectorAll('.checkin-mode').forEach(content => {
        content.classList.remove('active');
      });
      document.getElementById(mode + 'Mode').classList.add('active');

      // Clear selections
      clearSelection();
    }

    searchInput.addEventListener('input', function() {
      const query = this.value.trim();

      clearTimeout(debounceTimer);

      if (query.length < 2) {
        searchResults.style.display = 'none';
        return;
      }

      debounceTimer = setTimeout(async () => {
        try {
          const response = await fetch(`/api/members/search?q=${encodeURIComponent(query)}`);
          const members = await response.json();

          if (members.length === 0) {
            searchResults.innerHTML = '<div class="member-search-item text-muted">No members found - try "New Visitor" tab</div>';
            searchResults.style.display = 'block';
            return;
          }

          searchResults.innerHTML = members.map(member => {
            const name = member.displayName || `${member.firstName} ${member.lastName}`;
            const subtext = member.subtext || '';
            const isChild = member.isChild || member.memberType === 'child';
            const typeLabel = isChild ? '<span class="badge bg-info ms-1">Child</span>' : '';

            return `
              <div class="member-search-item"
                   data-id="${member._id}"
                   data-name="${encodeURIComponent(name)}"
                   data-subtext="${encodeURIComponent(subtext)}"
                   data-is-child="${isChild}">
                <strong>${escapeHtml(name)}</strong>${typeLabel}
                ${subtext ? `<br><small class="text-muted">${escapeHtml(subtext)}</small>` : ''}
              </div>
            `;
          }).join('');

          searchResults.querySelectorAll('.member-search-item').forEach(item => {
            item.addEventListener('click', function() {
              selectMember(
                this.dataset.id,
                decodeURIComponent(this.dataset.name),
                decodeURIComponent(this.dataset.subtext || ''),
                this.dataset.isChild === 'true'
              );
            });
          });

          searchResults.style.display = 'block';
        } catch (err) {
          console.error('Search failed:', err);
        }
      }, 300);
    });

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function selectMember(id, name, subtext, isChild) {
      memberIdInput.value = id;
      selectedMemberName.textContent = name;
      // Show subtext (DOB for children, email for adults)
      selectedMemberEmail.textContent = subtext || (isChild ? 'Child member' : 'No email on file');
      selectedMemberDiv.style.display = 'block';
      searchInput.style.display = 'none';
      searchResults.style.display = 'none';
    }

    function clearSelection() {
      memberIdInput.value = '';
      selectedMemberDiv.style.display = 'none';
      searchInput.style.display = 'block';
      searchInput.value = '';
      searchResults.style.display = 'none';
    }

    document.addEventListener('click', function(e) {
      if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
        searchResults.style.display = 'none';
      }
    });

    // ─── New Visitor Form: Member Type Toggle ─────────────────────────────────
    function updateNewVisitorFieldVisibility(memberType) {
      const childFields = document.querySelectorAll('.new-child-field');

      if (memberType === 'child') {
        // Show child-specific fields (parent selector)
        childFields.forEach(field => field.style.display = 'block');
      } else {
        // Hide child-specific fields
        childFields.forEach(field => field.style.display = 'none');
      }
    }

    // Listen for member type changes in new visitor form
    document.querySelectorAll('#newVisitorForm input[name="memberType"]').forEach(radio => {
      radio.addEventListener('change', function() {
        updateNewVisitorFieldVisibility(this.value);
      });
    });

    // Initialize Select2 for parent selection with AJAX search
    $(document).ready(function() {
      $('#newParent').select2({
        placeholder: 'Search for parent/guardian...',
        allowClear: true,
        ajax: {
          url: '/api/members/search',
          dataType: 'json',
          delay: 250,
          data: function(params) {
            return {
              q: params.term,
              memberType: 'adult'  // Only search adult members
            };
          },
          processResults: function(data) {
            return {
              results: data
            };
          },
          cache: true
        },
        minimumInputLength: 2
      });
    });
  </script>
</body>
</html>
