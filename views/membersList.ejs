<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>All Members</title>
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet" />
  <style>
    .clickable-row { cursor: pointer; }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1>All Members</h1>
    <div class="d-flex mb-3">
      <a href="/members/new" class="btn btn-success me-2">+ New Member</a>
      <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
      <input
        id="member-filter"
        type="text"
        class="form-control ms-auto"
        placeholder="Search name or emailâ€¦"
        style="max-width: 300px;"
      />
    </div>
    <table class="table table-hover" id="members-table">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Joined</th>
        </tr>
      </thead>
      <tbody>
        <% members.forEach(m => { %>
          <tr
            class="clickable-row"
            data-href="/members/<%= m._id %>"
          >
            <td><%= m.firstName %> <%= m.lastName %></td>
            <td><%= m.email %></td>
            <td><%= m.joinedAt.toLocaleDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    // Make rows clickable
    document.querySelectorAll('.clickable-row').forEach(row => {
      row.addEventListener('click', () => {
        window.location = row.dataset.href;
      });
    });

    // Client-side search/filter
    const filterInput = document.getElementById('member-filter');
    const tableRows   = document.querySelectorAll('#members-table tbody tr');

    filterInput.addEventListener('input', () => {
      const q = filterInput.value.trim().toLowerCase();
      tableRows.forEach(row => {
        const text = row.innerText.toLowerCase();
        row.style.display = text.includes(q) ? '' : 'none';
      });
    });
  </script>
</body>
</html>
