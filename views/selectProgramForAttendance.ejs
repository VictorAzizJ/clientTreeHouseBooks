<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Take Attendance - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-check2-square"></i> Take Attendance</h1>
        <p class="text-muted">Select a program to record attendance</p>
      </div>
      <a href="/programs" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Programs
      </a>
    </div>

    <div class="card">
      <div class="card-body">
        <% if (programs && programs.length > 0) { %>
          <form id="attendanceForm">
            <div class="mb-3">
              <label for="programId" class="form-label">Select Program *</label>
              <select class="form-select" id="programId" name="programId" required>
                <option value="">Choose a program...</option>
                <% programs.forEach(program => { %>
                  <option value="<%= program._id %>">
                    <%= program.name %>
                    <% if (program.description) { %> - <%= program.description %><% } %>
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="mb-3">
              <label for="date" class="form-label">Date *</label>
              <input
                type="date"
                class="form-control"
                id="date"
                name="date"
                value="<%= new Date().toISOString().split('T')[0] %>"
                required
              >
            </div>

            <div class="text-end">
              <a href="/programs" class="btn btn-secondary me-2">Cancel</a>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-arrow-right"></i> Continue to Attendance
              </button>
            </div>
          </form>
        <% } else { %>
          <div class="text-center text-muted py-5">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mt-3">No programs found</p>
            <a href="/programs/new" class="btn btn-primary mt-2">
              <i class="bi bi-plus-circle"></i> Create First Program
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Redirect to program-specific attendance page
    document.getElementById('attendanceForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const programId = document.getElementById('programId').value;
      const date = document.getElementById('date').value;
      if (programId) {
        window.location.href = `/programs/${programId}/attendance?date=${date}`;
      }
    });
  </script>
</body>
</html>
