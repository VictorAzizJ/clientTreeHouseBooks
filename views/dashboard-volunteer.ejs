<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Volunteer Dashboard - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    body {
      background: linear-gradient(135deg, #DEF2F1 0%, #FEFFFF 100%);
      min-height: 100vh;
    }
    .widget-card {
      height: 100%;
      overflow: hidden;
      border: none;
      border-radius: 0.75rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    .scroll-widget {
      max-height: 500px;
      overflow-y: auto;
    }
    .welcome-header {
      background: white;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin-bottom: 2rem;
    }
    .welcome-header h2 {
      color: #2B7A78;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    .welcome-header p {
      color: #6B6B6B;
      margin: 0;
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <%- include('partials/nav') %>

  <div class="container mt-4">
    <% if (success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Welcome Header -->
    <div class="welcome-header">
      <h2><i class="bi bi-person-heart"></i> Welcome, <%= user.firstName || user.claims?.firstName || 'Volunteer' %>!</h2>
      <p>Thank you for volunteering at TreeHouseBooks Philadelphia</p>
    </div>

    <!-- Quick Actions -->
    <%- include('partials/quickActions') %>

    <!-- Mosaic-style Bootstrap grid -->
    <div class="row g-4">
      
      <!-- LGL Form Widget (wider with scroll) -->
      <div class="col-md-8">
        <div class="card widget-card shadow-sm">
          <div class="card-body scroll-widget">
            <h5 class="card-title">Volunteer Check-In</h5>
            <iframe
              onload="window.parent.scrollTo(0,0)"
              height="500"
              allowTransparency="true"
              allow="payment"
              frameborder="0"
              scrolling="yes"
              style="width:100%;border:none"
              src="https://secure.lglforms.com/form_engine/s/ALIpQGGP1QJxOuaY5sx7Lw">
              <a href="https://secure.lglforms.com/form_engine/s/ALIpQGGP1QJxOuaY5sx7Lw">Fill out my LGL Form!</a>
            </iframe>
          </div>
        </div>
      </div>

      <!-- Notifications Widget -->
      <div class="col-md-4">
        <div class="card widget-card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Announcements</h5>
            <% if (notifications.length === 0) { %>
              <p class="text-muted">No announcements yet.</p>
            <% } else { %>
              <ul class="list-group list-group-flush">
                <% notifications.forEach(n => { %>
                  <li class="list-group-item">
                    <strong><%= n.title %></strong><br/>
                    <small>
                      <%= n.senderId.firstName %> <%= n.senderId.lastName %> 
                      Â· <%= n.senderRole.toUpperCase() %> 
                      Â· <%= new Date(n.createdAt).toLocaleDateString() %>
                    </small>
                    <p class="mb-2"><%= n.body %></p>
                    <form action="/notifications/<%= n._id %>/acknowledge" method="POST">
                      <button type="submit" class="btn btn-sm btn-outline-success">Acknowledge</button>
                    </form>
                  </li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Future Widget Placeholder: Calendar -->
      <div class="col-md-6">
        <div class="card widget-card shadow-sm text-center p-4">
          <div class="card-body">
            <h5 class="card-title">ðŸ“… Volunteer Calendar</h5>
            <p class="text-muted">Coming soon: See where help is needed.</p>
          </div>
        </div>
      </div>

      <!-- Future Widget Placeholder: Stats -->
      <div class="col-md-6">
        <div class="card widget-card shadow-sm text-center p-4">
          <div class="card-body">
            <h5 class="card-title">ðŸ“Š Your Activity</h5>
            <p class="text-muted">Track your hours and contributions here soon.</p>
          </div>
        </div>
      </div>

    </div>

    <div class="mt-4 text-end">
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

