<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Book Distribution - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <style>
    .search-results {
      position: absolute;
      z-index: 1000;
      width: 100%;
      max-height: 300px;
      overflow-y: auto;
      background: white;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      display: none;
    }
    .search-item {
      padding: 10px;
      cursor: pointer;
      border-bottom: 1px solid #eee;
    }
    .search-item:hover {
      background-color: #f8f9fa;
    }
    .search-item:last-child {
      border-bottom: none;
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-truck"></i> Book Distribution</h1>
        <p class="text-muted">Record books distributed to communities</p>
      </div>
      <a href="/book-distribution" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> View All Distributions
      </a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <div class="card">
      <div class="card-header" style="background-color: var(--thb-primary); color: white;">
        <h5 class="mb-0"><i class="bi bi-truck"></i> Record Distribution</h5>
      </div>
      <div class="card-body">
        <form method="POST" action="/book-distribution">
          <!-- Recipient Type -->
          <div class="mb-3">
            <label class="form-label">Recipient Type *</label>
            <select class="form-select" id="recipientType" name="recipientType" required>
              <option value="">Select recipient type...</option>
              <option value="member">Individual Person</option>
              <option value="organization">Organization</option>
            </select>
          </div>

          <!-- Person Search (when recipientType = member) -->
          <div class="mb-3 position-relative" id="personSearchSection" style="display: none;">
            <label for="memberSearch" class="form-label">Select Person *</label>
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                id="memberSearch"
                placeholder="Search by name or email..."
                autocomplete="off"
              >
              <a href="/members/new" target="_blank" class="btn btn-outline-success" title="Add New Member">
                <i class="bi bi-person-plus"></i> New
              </a>
            </div>
            <div id="memberSearchResults" class="search-results"></div>
            <input type="hidden" id="memberId" name="memberId">
            <div id="selectedMember" class="mt-2" style="display:none;">
              <div class="alert alert-info">
                <i class="bi bi-person-check"></i> Selected: <strong id="selectedMemberName"></strong>
                <button type="button" class="btn btn-sm btn-outline-secondary float-end" onclick="clearMemberSelection()">Change</button>
              </div>
            </div>
          </div>

          <!-- Organization Search (when recipientType = organization) -->
          <div class="mb-3 position-relative" id="orgSearchSection" style="display: none;">
            <label for="orgSearch" class="form-label">Select Organization *</label>
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                id="orgSearch"
                placeholder="Search organizations..."
                autocomplete="off"
              >
              <a href="/organizations/new" target="_blank" class="btn btn-outline-success" title="Add New Organization">
                <i class="bi bi-building-add"></i> New
              </a>
            </div>
            <div id="orgSearchResults" class="search-results"></div>
            <input type="hidden" id="organizationId" name="organizationId">
            <div id="selectedOrg" class="mt-2" style="display:none;">
              <div class="alert alert-info">
                <i class="bi bi-building"></i> Selected: <strong id="selectedOrgName"></strong>
                <button type="button" class="btn btn-sm btn-outline-secondary float-end" onclick="clearOrgSelection()">Change</button>
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label for="eventName" class="form-label">Event Name</label>
              <input type="text" class="form-control" id="eventName" name="eventName" placeholder="e.g., Back to School Drive">
            </div>
            <div class="col-md-6">
              <label for="eventDate" class="form-label">Event Date</label>
              <input type="date" class="form-control" id="eventDate" name="eventDate" value="<%= new Date().toISOString().split('T')[0] %>">
            </div>
          </div>

          <!-- Total Books -->
          <div class="mb-3">
            <label for="totalBooks" class="form-label">Total Books Distributed *</label>
            <input
              type="number"
              class="form-control"
              id="totalBooks"
              name="totalBooks"
              min="1"
              max="100000"
              required
              style="max-width: 200px;"
            >
          </div>

          <div class="mb-3">
            <label for="notes" class="form-label">Notes</label>
            <textarea class="form-control" id="notes" name="notes" rows="2" placeholder="Any additional notes about this distribution..."></textarea>
          </div>

          <div class="text-end">
            <a href="/book-distribution" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-circle"></i> Record Distribution
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let memberDebounceTimer;
    let orgDebounceTimer;

    // DOM Elements
    const memberSearchInput = document.getElementById('memberSearch');
    const memberSearchResults = document.getElementById('memberSearchResults');
    const memberIdInput = document.getElementById('memberId');
    const selectedMemberDiv = document.getElementById('selectedMember');
    const selectedMemberName = document.getElementById('selectedMemberName');

    const orgSearchInput = document.getElementById('orgSearch');
    const orgSearchResults = document.getElementById('orgSearchResults');
    const organizationIdInput = document.getElementById('organizationId');
    const selectedOrgDiv = document.getElementById('selectedOrg');
    const selectedOrgName = document.getElementById('selectedOrgName');

    // Toggle recipient type sections
    function toggleRecipientFields() {
      const recipientType = document.getElementById('recipientType').value;
      const personSection = document.getElementById('personSearchSection');
      const orgSection = document.getElementById('orgSearchSection');

      // Hide all
      personSection.style.display = 'none';
      orgSection.style.display = 'none';

      // Show relevant section
      if (recipientType === 'member') {
        personSection.style.display = 'block';
      } else if (recipientType === 'organization') {
        orgSection.style.display = 'block';
      }

      // Clear selections when switching
      clearMemberSelection();
      clearOrgSelection();
    }

    // Member search
    memberSearchInput.addEventListener('input', function() {
      const query = this.value.trim();
      clearTimeout(memberDebounceTimer);

      if (query.length < 2) {
        memberSearchResults.style.display = 'none';
        return;
      }

      memberDebounceTimer = setTimeout(async () => {
        try {
          const response = await fetch(`/api/members/search?q=${encodeURIComponent(query)}`);
          const members = await response.json();

          if (members.length === 0) {
            memberSearchResults.innerHTML = '<div class="search-item text-muted">No members found</div>';
            memberSearchResults.style.display = 'block';
            return;
          }

          memberSearchResults.innerHTML = members.map(member => {
            const name = `${member.firstName} ${member.lastName}`;
            const email = member.email || '';
            return `
              <div class="search-item"
                   data-id="${member._id}"
                   data-name="${encodeURIComponent(name)}"
                   data-email="${encodeURIComponent(email)}">
                <strong>${escapeHtml(name)}</strong>
                ${email ? `<br><small class="text-muted">${escapeHtml(email)}</small>` : ''}
              </div>
            `;
          }).join('');

          memberSearchResults.querySelectorAll('.search-item').forEach(item => {
            item.addEventListener('click', function() {
              selectMember(
                this.dataset.id,
                decodeURIComponent(this.dataset.name),
                decodeURIComponent(this.dataset.email)
              );
            });
          });

          memberSearchResults.style.display = 'block';
        } catch (err) {
          console.error('Member search failed:', err);
        }
      }, 300);
    });

    // Organization search
    orgSearchInput.addEventListener('input', function() {
      const query = this.value.trim();
      clearTimeout(orgDebounceTimer);

      if (query.length < 2) {
        orgSearchResults.style.display = 'none';
        return;
      }

      orgDebounceTimer = setTimeout(async () => {
        try {
          const response = await fetch(`/api/organizations/search?q=${encodeURIComponent(query)}`);
          const orgs = await response.json();

          if (orgs.length === 0) {
            orgSearchResults.innerHTML = '<div class="search-item text-muted">No organizations found</div>';
            orgSearchResults.style.display = 'block';
            return;
          }

          orgSearchResults.innerHTML = orgs.map(org => {
            return `
              <div class="search-item"
                   data-id="${org.id || org._id}"
                   data-name="${encodeURIComponent(org.text || org.name)}">
                <strong>${escapeHtml(org.text || org.name)}</strong>
                ${org.address ? `<br><small class="text-muted">${escapeHtml(org.address)}</small>` : ''}
              </div>
            `;
          }).join('');

          orgSearchResults.querySelectorAll('.search-item').forEach(item => {
            item.addEventListener('click', function() {
              selectOrganization(
                this.dataset.id,
                decodeURIComponent(this.dataset.name)
              );
            });
          });

          orgSearchResults.style.display = 'block';
        } catch (err) {
          console.error('Organization search failed:', err);
        }
      }, 300);
    });

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function selectMember(id, name, email) {
      memberIdInput.value = id;
      selectedMemberName.textContent = name + (email ? ` (${email})` : '');
      selectedMemberDiv.style.display = 'block';
      memberSearchInput.style.display = 'none';
      memberSearchResults.style.display = 'none';
    }

    function clearMemberSelection() {
      memberIdInput.value = '';
      selectedMemberDiv.style.display = 'none';
      memberSearchInput.style.display = 'block';
      memberSearchInput.value = '';
      memberSearchResults.style.display = 'none';
    }

    function selectOrganization(id, name) {
      organizationIdInput.value = id;
      selectedOrgName.textContent = name;
      selectedOrgDiv.style.display = 'block';
      orgSearchInput.style.display = 'none';
      orgSearchResults.style.display = 'none';
    }

    function clearOrgSelection() {
      organizationIdInput.value = '';
      selectedOrgDiv.style.display = 'none';
      orgSearchInput.style.display = 'block';
      orgSearchInput.value = '';
      orgSearchResults.style.display = 'none';
    }

    // Hide results when clicking outside
    document.addEventListener('click', function(e) {
      if (!memberSearchInput.contains(e.target) && !memberSearchResults.contains(e.target)) {
        memberSearchResults.style.display = 'none';
      }
      if (!orgSearchInput.contains(e.target) && !orgSearchResults.contains(e.target)) {
        orgSearchResults.style.display = 'none';
      }
    });

    // Add event listener for recipient type change
    const recipientTypeSelect = document.getElementById('recipientType');
    if (recipientTypeSelect) {
      recipientTypeSelect.addEventListener('change', toggleRecipientFields);
    }
  </script>
</body>
</html>
