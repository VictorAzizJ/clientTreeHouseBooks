<!-- views/adminEmailTemplates.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Email Templates - Admin - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
</head>
<body>
  <%- include('partials/nav') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-envelope-paper"></i> Email Templates</h1>
        <p class="text-muted">Manage automated email templates sent to members and donors</p>
      </div>
      <div>
        <a href="/admin/email-logs" class="btn btn-outline-secondary me-2">
          <i class="bi bi-list-ul"></i> View Send Logs
        </a>
        <a href="/admin/email-templates/seed" class="btn btn-outline-primary"
           onclick="return confirm('This will reset templates to defaults. Continue?')">
          <i class="bi bi-arrow-repeat"></i> Reset to Defaults
        </a>
      </div>
    </div>

    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if (!templates || templates.length === 0) { %>
      <div class="card">
        <div class="card-body text-center py-5">
          <i class="bi bi-envelope-x display-1 text-muted"></i>
          <h3 class="mt-3">No Email Templates Found</h3>
          <p class="text-muted">Click the button below to create default email templates.</p>
          <a href="/admin/email-templates/seed" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Default Templates
          </a>
        </div>
      </div>
    <% } else { %>
      <div class="row">
        <% templates.forEach(function(template) { %>
          <div class="col-md-6 mb-4">
            <div class="card h-100 <%= template.isActive ? '' : 'border-secondary' %>">
              <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                  <h5 class="mb-0">
                    <% if (template.isActive) { %>
                      <span class="badge bg-success me-2">Active</span>
                    <% } else { %>
                      <span class="badge bg-secondary me-2">Disabled</span>
                    <% } %>
                    <%= template.name %>
                  </h5>
                </div>
                <div>
                  <form action="/admin/email-templates/<%= template._id %>/toggle" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-sm <%= template.isActive ? 'btn-outline-secondary' : 'btn-outline-success' %>"
                            title="<%= template.isActive ? 'Disable' : 'Enable' %> this template">
                      <i class="bi <%= template.isActive ? 'bi-toggle-on' : 'bi-toggle-off' %>"></i>
                    </button>
                  </form>
                  <a href="/admin/email-templates/<%= template._id %>/edit" class="btn btn-sm btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                </div>
              </div>
              <div class="card-body">
                <p class="text-muted small mb-2"><%= template.description %></p>

                <div class="mb-3">
                  <strong>Template Key:</strong>
                  <code><%= template.templateKey %></code>
                </div>

                <div class="mb-3">
                  <strong>Subject:</strong>
                  <div class="border rounded p-2 bg-light">
                    <%= template.subject %>
                  </div>
                </div>

                <% if (template.availablePlaceholders && template.availablePlaceholders.length > 0) { %>
                  <div>
                    <strong>Available Placeholders:</strong>
                    <div class="mt-1">
                      <% template.availablePlaceholders.forEach(function(ph) { %>
                        <span class="badge bg-info text-dark me-1 mb-1" title="<%= ph.description %>">
                          <%= ph.placeholder %>
                        </span>
                      <% }); %>
                    </div>
                  </div>
                <% } %>
              </div>
              <div class="card-footer text-muted small">
                <% if (template.updatedAt) { %>
                  Last modified: <%= new Date(template.updatedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>

    <div class="mt-4">
      <a href="/admin" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Admin
      </a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
