<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>New Member - TreeHouseBooks</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet" />
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    .parent-search-results {
      position: absolute;
      z-index: 1050;
      width: 100%;
      max-height: 250px;
      overflow-y: auto;
      background: white;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.15);
      display: none;
    }
    .parent-search-item {
      padding: 10px 12px;
      cursor: pointer;
      border-bottom: 1px solid #eee;
    }
    .parent-search-item:hover {
      background-color: #f8f9fa;
    }
    .parent-search-item:last-child {
      border-bottom: none;
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-5">
    <h1>New Member</h1>
    <form action="/members" method="POST" id="memberForm">
      <!-- Member Type Selection -->
      <div class="mb-3">
        <label class="form-label">Member Type</label>
        <div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="memberType" id="typeAdult" value="adult" checked>
            <label class="form-check-label" for="typeAdult">Adult</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="memberType" id="typeChild" value="child">
            <label class="form-check-label" for="typeChild">Child</label>
          </div>
        </div>
        <small class="text-muted">Select "Child" for students who need to be linked to a parent/guardian</small>
      </div>

      <!-- Name Fields -->
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="firstName" class="form-label">First Name *</label>
          <input id="firstName" name="firstName" class="form-control" required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="lastName" class="form-label">Last Name *</label>
          <input id="lastName" name="lastName" class="form-control" required>
        </div>
      </div>

      <!-- Date of Birth (shown only for children) -->
      <div class="mb-3 child-field" id="dobField" style="display: none;">
        <label for="dateOfBirth" class="form-label">Date of Birth *</label>
        <input id="dateOfBirth" name="dateOfBirth" type="date" class="form-control">
        <small class="text-muted">Required for child members to track age</small>
      </div>

      <!-- Parent Selection (shown only for children) -->
      <div class="mb-3 child-field" id="parentField" style="display: none; position: relative;">
        <label for="parentSearch" class="form-label">Parent/Guardian (Optional)</label>
        <input
          type="text"
          class="form-control"
          id="parentSearch"
          placeholder="Type name to search..."
          autocomplete="off"
        >
        <div id="parentSearchResults" class="parent-search-results"></div>
        <input type="hidden" id="parent" name="parent">
        <div id="selectedParent" class="mt-2" style="display: none;">
          <div class="alert alert-success py-2 mb-0">
            <i class="bi bi-person-check"></i> Selected: <strong id="selectedParentName"></strong>
            <button type="button" class="btn btn-sm btn-outline-secondary float-end" onclick="clearParentSelection()">Change</button>
          </div>
        </div>
        <small class="text-muted">Optionally link this child to an existing adult member</small>
      </div>

      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label">
          Email <span class="text-muted">(optional)</span>
        </label>
        <input id="email" name="email" type="email" class="form-control">
        <small class="text-muted">Helps identify returning members</small>
      </div>

      <!-- Phone -->
      <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input id="phone" name="phone" class="form-control">
      </div>

      <!-- Zip Code -->
      <div class="mb-3">
        <label for="zipCode" class="form-label">Zip Code</label>
        <input id="zipCode" name="zipCode" class="form-control" placeholder="12345 or 12345-6789">
      </div>

      <!-- Full Address (Staff/Admin only) -->
      <% if (user.role === 'staff' || user.role === 'admin') { %>
        <div class="mb-3">
          <label for="address" class="form-label">Full Address (Staff/Admin Only)</label>
          <textarea id="address" name="address" class="form-control" placeholder="Street, City, State"></textarea>
          <small class="text-muted">Only staff and admin can enter full addresses</small>
        </div>
      <% } %>

      <!-- Emergency Contact (shown only for children) -->
      <div class="card mb-3 child-field" id="emergencyContactField" style="display: none;">
        <div class="card-header">Emergency Contact (Optional)</div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="emergencyContactName" class="form-label">Name</label>
              <input id="emergencyContactName" name="emergencyContactName" class="form-control" placeholder="Contact name">
            </div>
            <div class="col-md-4 mb-3">
              <label for="emergencyContactPhone" class="form-label">Phone</label>
              <input id="emergencyContactPhone" name="emergencyContactPhone" class="form-control" placeholder="(123) 456-7890">
            </div>
            <div class="col-md-4 mb-3">
              <label for="emergencyContactRelationship" class="form-label">Relationship</label>
              <input id="emergencyContactRelationship" name="emergencyContactRelationship" class="form-control" placeholder="e.g., Grandmother, Uncle">
            </div>
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-success">Create Member</button>
      <a href="/dashboard" class="btn btn-secondary ms-2">Back to Dashboard</a>
    </form>
  </div>

  <script>
    // Parent search elements
    let parentDebounceTimer;
    const parentSearchInput = document.getElementById('parentSearch');
    const parentSearchResults = document.getElementById('parentSearchResults');
    const parentIdInput = document.getElementById('parent');
    const selectedParentDiv = document.getElementById('selectedParent');
    const selectedParentName = document.getElementById('selectedParentName');

    // Parent search functionality
    parentSearchInput.addEventListener('input', function() {
      const query = this.value.trim();
      clearTimeout(parentDebounceTimer);

      if (query.length < 2) {
        parentSearchResults.style.display = 'none';
        return;
      }

      parentDebounceTimer = setTimeout(async () => {
        try {
          const response = await fetch('/api/members/search?q=' + encodeURIComponent(query) + '&memberType=adult');
          const members = await response.json();

          if (members.length === 0) {
            parentSearchResults.innerHTML = '<div class="parent-search-item text-muted">No adult members found</div>';
            parentSearchResults.style.display = 'block';
            return;
          }

          parentSearchResults.innerHTML = members.map(function(member) {
            const name = member.displayName || (member.firstName + ' ' + member.lastName);
            const email = member.email || '';
            return '<div class="parent-search-item" data-id="' + member._id + '" data-name="' + escapeAttr(name) + '">' +
              '<strong>' + escapeHtml(name) + '</strong>' +
              (email ? '<br><small class="text-muted">' + escapeHtml(email) + '</small>' : '') +
              '</div>';
          }).join('');

          // Attach click handlers
          parentSearchResults.querySelectorAll('.parent-search-item').forEach(function(item) {
            item.addEventListener('click', function() {
              selectParent(this.dataset.id, this.dataset.name);
            });
          });

          parentSearchResults.style.display = 'block';
        } catch (err) {
          console.error('Parent search failed:', err);
        }
      }, 300);
    });

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function escapeAttr(text) {
      return text.replace(/"/g, '&quot;').replace(/'/g, '&#39;');
    }

    function selectParent(id, name) {
      parentIdInput.value = id;
      selectedParentName.textContent = name;
      selectedParentDiv.style.display = 'block';
      parentSearchInput.style.display = 'none';
      parentSearchResults.style.display = 'none';
    }

    function clearParentSelection() {
      parentIdInput.value = '';
      selectedParentDiv.style.display = 'none';
      parentSearchInput.style.display = 'block';
      parentSearchInput.value = '';
      parentSearchInput.focus();
    }

    // Hide results when clicking outside
    document.addEventListener('click', function(e) {
      if (!parentSearchInput.contains(e.target) && !parentSearchResults.contains(e.target)) {
        parentSearchResults.style.display = 'none';
      }
    });

    // Show/hide fields based on member type
    function updateFieldVisibility(memberType) {
      const childFields = document.querySelectorAll('.child-field');

      if (memberType === 'child') {
        childFields.forEach(function(field) { field.style.display = 'block'; });
      } else {
        childFields.forEach(function(field) { field.style.display = 'none'; });
        // Clear parent selection when switching to adult
        clearParentSelection();
      }
    }

    // Listen for member type changes
    document.querySelectorAll('input[name="memberType"]').forEach(function(radio) {
      radio.addEventListener('change', function() {
        updateFieldVisibility(this.value);
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
