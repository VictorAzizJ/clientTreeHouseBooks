<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" /><meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Staff Dashboard</title>
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet" />
  <style>
    .clickable-card { cursor: pointer; }
  </style>
</head>
<body>
  <div class="container mt-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Welcome back, <%= user.firstName %>!</h1>
      <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>

    <!-- Mosaic grid: 3 cols x 2 rows -->
    <div class="row g-4">
      <!-- Notifications -->
      <div class="col-md-4">
        <div class="card clickable-card h-100"
             onclick="location.href='/notifications'">
          <div class="card-header bg-warning text-dark">Notifications</div>
          <div class="card-body text-center">
            <h2 class="card-title"><%= notificationsCount %></h2>
            <p class="card-text">new items</p>
          </div>
        </div>
      </div>

      <!-- Messages -->
      <div class="col-md-4">
        <div class="card clickable-card h-100"
             onclick="location.href='/messages'">
          <div class="card-header bg-primary text-white">Messages</div>
          <div class="card-body">
            <% if (recentMessages.length) { %>
              <ul class="list-group list-group-flush">
                <% recentMessages.forEach(msg => { %>
                  <li class="list-group-item text-start">
                    <strong><%= msg.sender.firstName %>:</strong>
                    <%= msg.content.slice(0, 30) %>…
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <p class="text-center my-3">No recent messages</p>
            <% } %>
          </div>
          <div class="card-footer text-center">
            View All
          </div>
        </div>
      </div>

      <!-- Announcements -->
      <div class="col-md-4">
        <div class="card clickable-card h-100"
             onclick="location.href='/announcements'">
          <div class="card-header bg-success text-white">Announcements</div>
          <div class="card-body">
            <% if (recentAnns.length) { %>
              <ul class="list-group list-group-flush">
                <% recentAnns.forEach(a => { %>
                  <li class="list-group-item text-start">
                    <strong><%= a.sender.firstName %>:</strong>
                    <%= a.content.slice(0, 30) %>…
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <p class="text-center my-3">No recent announcements</p>
            <% } %>
          </div>
          <div class="card-footer text-center">
            View All
          </div>
        </div>
      </div>

      <!-- New Member -->
      <div class="col-md-4">
        <div class="card clickable-card h-100"
             onclick="location.href='/members/new'">
          <div class="card-header bg-success text-white">New Member</div>
          <div class="card-body text-center">
            <p class="card-text">Add someone new</p>
          </div>
        </div>
      </div>

      <!-- All Members -->
      <div class="col-md-4">
        <div class="card clickable-card h-100"
             onclick="location.href='/members'">
          <div class="card-header bg-primary text-white">All Members</div>
          <div class="card-body text-center">
            <p class="card-text">View member list</p>
          </div>
        </div>
      </div>

      <!-- Placeholder -->
      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-header bg-secondary text-white">Placeholder</div>
          <div class="card-body">
            <p class="card-text">Coming soon…</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

