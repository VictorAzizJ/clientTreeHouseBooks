<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Visitor Check-ins - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-person-check"></i> Visitor Check-ins</h1>
        <p class="text-muted">View all visitor check-ins</p>
      </div>
      <a href="/dashboard" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
      </a>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Member</th>
                <th>Email</th>
                <th>Purpose</th>
                <th>Notes</th>
              </tr>
            </thead>
            <tbody>
              <% if (visits && visits.length > 0) { %>
                <% visits.forEach(visit => { %>
                  <tr>
                    <td><%= new Date(visit.visitDate).toLocaleDateString() %></td>
                    <td><%= new Date(visit.visitDate).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></td>
                    <td>
                      <% if (visit.member) { %>
                        <a href="/members/<%= visit.member._id %>">
                          <%= visit.member.firstName %> <%= visit.member.lastName %>
                        </a>
                      <% } else { %>
                        <span class="text-muted">Unknown</span>
                      <% } %>
                    </td>
                    <td><%= visit.member?.email || '-' %></td>
                    <td><%= visit.purpose || '-' %></td>
                    <td>
                      <% if (visit.notes) { %>
                        <small class="text-muted"><%= visit.notes.substring(0, 50) %><%= visit.notes.length > 50 ? '...' : '' %></small>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">No visits recorded yet</p>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
