<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Visitor Check-ins - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-person-check"></i> Visitor Check-ins</h1>
        <p class="text-muted">
          <% if (pagination) { %>
            Showing <%= ((pagination.currentPage - 1) * pagination.limit) + 1 %>-<%= Math.min(pagination.currentPage * pagination.limit, pagination.totalVisits) %> of <%= pagination.totalVisits.toLocaleString() %> visits
          <% } else { %>
            View all visitor check-ins
          <% } %>
        </p>
      </div>
      <div>
        <a href="/visitor-checkin" class="btn btn-primary me-2">
          <i class="bi bi-plus-circle"></i> New Check-in
        </a>
        <a href="/dashboard" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left"></i> Dashboard
        </a>
      </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
      <div class="card-body">
        <form method="GET" action="/visits" class="row g-3">
          <div class="col-md-4">
            <label class="form-label">Search Member</label>
            <input type="text" name="search" class="form-control" placeholder="Name or email..." value="<%= filters?.search || '' %>">
          </div>
          <div class="col-md-3">
            <label class="form-label">Date From</label>
            <input type="date" name="dateFrom" class="form-control" value="<%= filters?.dateFrom || '' %>">
          </div>
          <div class="col-md-3">
            <label class="form-label">Date To</label>
            <input type="date" name="dateTo" class="form-control" value="<%= filters?.dateTo || '' %>">
          </div>
          <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">
              <i class="bi bi-search"></i> Filter
            </button>
            <a href="/visits" class="btn btn-outline-secondary">
              <i class="bi bi-x-circle"></i>
            </a>
          </div>
        </form>
        <div class="mt-2 d-flex justify-content-end">
          <a href="/visits?format=csv<%= filters?.search ? '&search=' + encodeURIComponent(filters.search) : '' %><%= filters?.dateFrom ? '&dateFrom=' + filters.dateFrom : '' %><%= filters?.dateTo ? '&dateTo=' + filters.dateTo : '' %>" class="btn btn-sm btn-success">
            <i class="bi bi-download"></i> Export CSV
          </a>
        </div>
      </div>
    </div>

    <!-- Stats Card -->
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="card text-center bg-light">
          <div class="card-body">
            <h3><%= pagination?.totalVisits?.toLocaleString() || visits.length %></h3>
            <p class="text-muted mb-0">Total Visits</p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Member</th>
                <th>Email</th>
                <th>Purpose</th>
                <th>Notes</th>
                <% if (user.role === 'admin') { %><th>Actions</th><% } %>
              </tr>
            </thead>
            <tbody>
              <% if (visits && visits.length > 0) { %>
                <% visits.forEach(visit => { %>
                  <tr>
                    <td class="visit-date" data-date="<%= visit.visitDate %>"></td>
                    <td class="visit-time" data-date="<%= visit.visitDate %>"></td>
                    <td>
                      <% if (visit.member) { %>
                        <a href="/members/<%= visit.member._id %>">
                          <%= visit.member.firstName %> <%= visit.member.lastName %>
                        </a>
                      <% } else { %>
                        <span class="text-muted">Unknown</span>
                      <% } %>
                    </td>
                    <td><%= visit.member?.email || '-' %></td>
                    <td><%= visit.purpose || '-' %></td>
                    <td>
                      <% if (visit.notes) { %>
                        <small class="text-muted"><%= visit.notes.substring(0, 50) %><%= visit.notes.length > 50 ? '...' : '' %></small>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <% if (user.role === 'admin') { %>
                    <td>
                      <a href="/visits/<%= visit._id %>/edit" class="btn btn-sm btn-outline-warning" title="Edit">
                        <i class="bi bi-pencil"></i>
                      </a>
                    </td>
                    <% } %>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="<%= user.role === 'admin' ? 7 : 6 %>" class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">No visits found</p>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if (pagination && pagination.totalPages > 1) { %>
          <nav aria-label="Visits pagination" class="mt-4">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <select class="form-select form-select-sm" style="width: auto;" onchange="changeLimit(this.value)">
                  <option value="25" <%= pagination.limit === 25 ? 'selected' : '' %>>25 per page</option>
                  <option value="50" <%= pagination.limit === 50 ? 'selected' : '' %>>50 per page</option>
                  <option value="100" <%= pagination.limit === 100 ? 'selected' : '' %>>100 per page</option>
                </select>
              </div>
              <ul class="pagination mb-0">
                <!-- First page -->
                <li class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
                  <a class="page-link" href="<%= buildPaginationUrl(1) %>" aria-label="First">
                    <i class="bi bi-chevron-double-left"></i>
                  </a>
                </li>
                <!-- Previous -->
                <li class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
                  <a class="page-link" href="<%= buildPaginationUrl(pagination.currentPage - 1) %>" aria-label="Previous">
                    <i class="bi bi-chevron-left"></i>
                  </a>
                </li>

                <!-- Page numbers -->
                <%
                  const maxPages = 5;
                  let startPage = Math.max(1, pagination.currentPage - Math.floor(maxPages / 2));
                  let endPage = Math.min(pagination.totalPages, startPage + maxPages - 1);
                  if (endPage - startPage < maxPages - 1) {
                    startPage = Math.max(1, endPage - maxPages + 1);
                  }
                %>

                <% if (startPage > 1) { %>
                  <li class="page-item disabled"><span class="page-link">...</span></li>
                <% } %>

                <% for (let i = startPage; i <= endPage; i++) { %>
                  <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                    <a class="page-link" href="<%= buildPaginationUrl(i) %>"><%= i %></a>
                  </li>
                <% } %>

                <% if (endPage < pagination.totalPages) { %>
                  <li class="page-item disabled"><span class="page-link">...</span></li>
                <% } %>

                <!-- Next -->
                <li class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
                  <a class="page-link" href="<%= buildPaginationUrl(pagination.currentPage + 1) %>" aria-label="Next">
                    <i class="bi bi-chevron-right"></i>
                  </a>
                </li>
                <!-- Last page -->
                <li class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
                  <a class="page-link" href="<%= buildPaginationUrl(pagination.totalPages) %>" aria-label="Last">
                    <i class="bi bi-chevron-double-right"></i>
                  </a>
                </li>
              </ul>
              <div class="text-muted small">
                Page <%= pagination.currentPage %> of <%= pagination.totalPages %>
              </div>
            </div>
          </nav>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function buildPaginationUrl(page) {
      const url = new URL(window.location.href);
      url.searchParams.set('page', page);
      return url.toString();
    }

    function changeLimit(limit) {
      const url = new URL(window.location.href);
      url.searchParams.set('limit', limit);
      url.searchParams.set('page', 1); // Reset to first page
      window.location.href = url.toString();
    }

    // Format dates client-side to use user's local timezone
    document.addEventListener('DOMContentLoaded', function() {
      // Format date cells
      document.querySelectorAll('.visit-date').forEach(function(cell) {
        const dateStr = cell.getAttribute('data-date');
        if (dateStr) {
          const date = new Date(dateStr);
          cell.textContent = date.toLocaleDateString();
        }
      });

      // Format time cells
      document.querySelectorAll('.visit-time').forEach(function(cell) {
        const dateStr = cell.getAttribute('data-date');
        if (dateStr) {
          const date = new Date(dateStr);
          cell.textContent = date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        }
      });
    });
  </script>
  <%
    // Helper function for pagination URLs in EJS
    function buildPaginationUrl(page) {
      const params = new URLSearchParams();
      params.set('page', page);
      if (pagination?.limit) params.set('limit', pagination.limit);
      if (filters?.search) params.set('search', filters.search);
      if (filters?.dateFrom) params.set('dateFrom', filters.dateFrom);
      if (filters?.dateTo) params.set('dateTo', filters.dateTo);
      return '/visits?' + params.toString();
    }
  %>
</body>
</html>
