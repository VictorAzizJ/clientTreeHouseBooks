<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Dashboard - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col-12">
        <h1><i class="bi bi-shield-check"></i> Admin Dashboard</h1>
        <p class="text-muted">Full system access and control</p>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <i class="bi bi-people-fill" style="font-size: 2rem; color: var(--thb-primary);"></i>
            <h3 class="mt-2"><%= stats?.totalMembers || 0 %></h3>
            <p class="text-muted mb-0">Total Members</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <i class="bi bi-calendar-event" style="font-size: 2rem; color: var(--thb-secondary);"></i>
            <h3 class="mt-2"><%= stats?.totalPrograms || 0 %></h3>
            <p class="text-muted mb-0">Programs</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <i class="bi bi-person-badge" style="font-size: 2rem; color: var(--thb-accent);"></i>
            <h3 class="mt-2"><%= stats?.totalUsers || 0 %></h3>
            <p class="text-muted mb-0">System Users</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <i class="bi bi-book-fill" style="font-size: 2rem; color: var(--thb-text-dark);"></i>
            <h3 class="mt-2"><%= stats?.totalCheckouts || 0 %></h3>
            <p class="text-muted mb-0">Total Checkouts</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Admin Functions -->
    <div class="row">
      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-shield-lock"></i> System Administration</h5>
          </div>
          <div class="card-body">
            <div class="list-group list-group-flush">
              <a href="/admin/users" class="list-group-item list-group-item-action">
                <i class="bi bi-person-gear"></i> Manage Users & Roles
              </a>
              <a href="/data-import" class="list-group-item list-group-item-action">
                <i class="bi bi-file-earmark-arrow-up"></i> Data Import/Export
              </a>
              <a href="/metrics/overview" class="list-group-item list-group-item-action">
                <i class="bi bi-graph-up"></i> System Metrics
              </a>
              <a href="/import/history" class="list-group-item list-group-item-action">
                <i class="bi bi-clock-history"></i> Import History
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-header" style="background-color: var(--thb-primary); color: white;">
            <h5 class="mb-0"><i class="bi bi-people"></i> Member Management</h5>
          </div>
          <div class="card-body">
            <div class="list-group list-group-flush">
              <a href="/members" class="list-group-item list-group-item-action">
                <i class="bi bi-person-lines-fill"></i> View All Members
              </a>
              <a href="/members/new" class="list-group-item list-group-item-action">
                <i class="bi bi-person-plus"></i> Add New Member
              </a>
              <a href="/members/search" class="list-group-item list-group-item-action">
                <i class="bi bi-search"></i> Search Members
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-header" style="background-color: var(--thb-secondary); color: white;">
            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Programs & Attendance</h5>
          </div>
          <div class="card-body">
            <div class="list-group list-group-flush">
              <a href="/programs" class="list-group-item list-group-item-action">
                <i class="bi bi-list-ul"></i> View All Programs
              </a>
              <a href="/programs/new" class="list-group-item list-group-item-action">
                <i class="bi bi-plus-circle"></i> Create New Program
              </a>
              <a href="/attendance/new" class="list-group-item list-group-item-action">
                <i class="bi bi-check2-square"></i> Take Attendance
              </a>
              <a href="/classroom/setup" class="list-group-item list-group-item-action">
                <i class="bi bi-mortarboard"></i> Classroom Programs
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-header" style="background-color: var(--thb-accent); color: white;">
            <h5 class="mb-0"><i class="bi bi-book"></i> Books & Donations</h5>
          </div>
          <div class="card-body">
            <div class="list-group list-group-flush">
              <a href="/checkouts/new" class="list-group-item list-group-item-action">
                <i class="bi bi-box-arrow-right"></i> Record Checkout
              </a>
              <a href="/checkouts" class="list-group-item list-group-item-action">
                <i class="bi bi-list-check"></i> View Checkouts
              </a>
              <a href="/donations/new" class="list-group-item list-group-item-action">
                <i class="bi bi-gift"></i> Record Donation
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
