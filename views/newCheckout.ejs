<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Book Checkout - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <style>
    .member-search-results {
      position: absolute;
      z-index: 1000;
      width: 100%;
      max-height: 300px;
      overflow-y: auto;
      background: white;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      display: none;
    }
    .member-search-item {
      padding: 10px;
      cursor: pointer;
      border-bottom: 1px solid #eee;
    }
    .member-search-item:hover {
      background-color: #f8f9fa;
    }
    .member-search-item:last-child {
      border-bottom: none;
    }
    .category-table input[type="number"] {
      width: 100px;
    }
    .totals-row {
      background-color: #f8f9fa;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-book"></i> Book Checkout</h1>
        <p class="text-muted">Record books checked out by a member</p>
      </div>
      <a href="/checkouts" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Checkouts
      </a>
    </div>

    <div class="card">
      <div class="card-body">
        <form method="POST" action="/checkouts">
          <div class="mb-3 position-relative">
            <label for="memberSearch" class="form-label">Search Member *</label>
            <input
              type="text"
              class="form-control"
              id="memberSearch"
              placeholder="Type name or email..."
              autocomplete="off"
            >
            <div id="searchResults" class="member-search-results"></div>
            <input type="hidden" id="memberId" name="memberId" required>
            <div id="selectedMember" class="mt-2" style="display:none;">
              <div class="alert alert-info">
                <i class="bi bi-person-check"></i> Selected: <strong id="selectedMemberName"></strong>
                <button type="button" class="btn btn-sm btn-outline-secondary float-end" onclick="clearSelection()">Change</button>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <label class="form-label">Book Categories *</label>
            <p class="text-muted small">Enter quantity for each category</p>
            <table class="table table-bordered category-table">
              <thead class="table-light">
                <tr>
                  <th>Category</th>
                  <th>Quantity</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Black Author Adult</td>
                  <td><input type="number" class="form-control qty-input" name="bookCategories[blackAuthorAdult][quantity]" min="0" value="0"></td>
                </tr>
                <tr>
                  <td>Adult</td>
                  <td><input type="number" class="form-control qty-input" name="bookCategories[adult][quantity]" min="0" value="0"></td>
                </tr>
                <tr>
                  <td>Black Author Kids</td>
                  <td><input type="number" class="form-control qty-input" name="bookCategories[blackAuthorKids][quantity]" min="0" value="0"></td>
                </tr>
                <tr>
                  <td>Kids</td>
                  <td><input type="number" class="form-control qty-input" name="bookCategories[kids][quantity]" min="0" value="0"></td>
                </tr>
                <tr>
                  <td>Board Books</td>
                  <td><input type="number" class="form-control qty-input" name="bookCategories[boardBooks][quantity]" min="0" value="0"></td>
                </tr>
              </tbody>
              <tfoot>
                <tr class="totals-row">
                  <td>Total Books</td>
                  <td id="totalQty">0</td>
                </tr>
              </tfoot>
            </table>
          </div>

          <div class="mb-4">
            <label for="totalWeight" class="form-label">Total Weight (lbs)</label>
            <input type="number" class="form-control" id="totalWeight" name="totalWeight" min="0" step="0.1" value="0" style="max-width: 200px;">
            <small class="text-muted">Optional - total weight of all books checked out</small>
          </div>

          <div class="text-end">
            <a href="/checkouts" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-circle"></i> Book Checkout
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let debounceTimer;
    const searchInput = document.getElementById('memberSearch');
    const searchResults = document.getElementById('searchResults');
    const memberIdInput = document.getElementById('memberId');
    const selectedMemberDiv = document.getElementById('selectedMember');
    const selectedMemberName = document.getElementById('selectedMemberName');

    searchInput.addEventListener('input', function() {
      const query = this.value.trim();

      clearTimeout(debounceTimer);

      if (query.length < 2) {
        searchResults.style.display = 'none';
        return;
      }

      debounceTimer = setTimeout(async () => {
        try {
          const response = await fetch(`/api/members/search?q=${encodeURIComponent(query)}`);
          const members = await response.json();

          if (members.length === 0) {
            searchResults.innerHTML = '<div class="member-search-item text-muted">No members found</div>';
            searchResults.style.display = 'block';
            return;
          }

          // Build results using data attributes to avoid special character issues
          searchResults.innerHTML = members.map(member => {
            const name = `${member.firstName} ${member.lastName}`;
            const email = member.email || '';
            return `
              <div class="member-search-item"
                   data-id="${member._id}"
                   data-name="${encodeURIComponent(name)}"
                   data-email="${encodeURIComponent(email)}">
                <strong>${escapeHtml(name)}</strong>
                ${email ? `<br><small class="text-muted">${escapeHtml(email)}</small>` : ''}
              </div>
            `;
          }).join('');

          // Attach click handlers using event delegation
          searchResults.querySelectorAll('.member-search-item').forEach(item => {
            item.addEventListener('click', function() {
              selectMember(
                this.dataset.id,
                decodeURIComponent(this.dataset.name),
                decodeURIComponent(this.dataset.email)
              );
            });
          });

          searchResults.style.display = 'block';
        } catch (err) {
          console.error('Search failed:', err);
        }
      }, 300);
    });

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function selectMember(id, name, email) {
      memberIdInput.value = id;
      selectedMemberName.textContent = name + (email ? ` (${email})` : '');
      selectedMemberDiv.style.display = 'block';
      searchInput.style.display = 'none';
      searchResults.style.display = 'none';
    }

    function clearSelection() {
      memberIdInput.value = '';
      selectedMemberDiv.style.display = 'none';
      searchInput.style.display = 'block';
      searchInput.value = '';
      searchInput.focus();
    }

    // Hide results when clicking outside
    document.addEventListener('click', function(e) {
      if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
        searchResults.style.display = 'none';
      }
    });

    // Calculate totals
    function updateTotals() {
      const qtyInputs = document.querySelectorAll('.qty-input');

      let totalQty = 0;

      qtyInputs.forEach(input => {
        totalQty += parseInt(input.value) || 0;
      });

      document.getElementById('totalQty').textContent = totalQty;
    }

    // Add event listeners to all quantity inputs
    document.querySelectorAll('.qty-input').forEach(input => {
      input.addEventListener('input', updateTotals);
    });
  </script>
</body>
</html>
