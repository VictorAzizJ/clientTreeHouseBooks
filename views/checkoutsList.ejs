<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Book Checkouts - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-book"></i> Book Checkouts</h1>
        <p class="text-muted">View all book checkouts</p>
      </div>
      <a href="/dashboard" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
      </a>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Member</th>
                <th>Email</th>
                <th>Books</th>
                <th>Categories</th>
                <th>Weight</th>
              </tr>
            </thead>
            <tbody>
              <% if (checkouts && checkouts.length > 0) { %>
                <% checkouts.forEach(checkout => { %>
                  <tr>
                    <td><%= new Date(checkout.checkoutDate || checkout.createdAt).toLocaleDateString() %></td>
                    <td>
                      <% if (checkout.member) { %>
                        <a href="/members/<%= checkout.member._id %>">
                          <%= checkout.member.firstName %> <%= checkout.member.lastName %>
                        </a>
                      <% } else { %>
                        <span class="text-muted">Unknown</span>
                      <% } %>
                    </td>
                    <td><%= checkout.member?.email || '-' %></td>
                    <td><span class="badge bg-primary"><%= checkout.numberOfBooks %></span></td>
                    <td>
                      <% if (checkout.bookCategories) { %>
                        <small>
                          <% const cats = checkout.bookCategories; %>
                          <% const parts = []; %>
                          <% if (cats.blackAuthorAdult?.quantity) parts.push('BA Adult: ' + cats.blackAuthorAdult.quantity); %>
                          <% if (cats.adult?.quantity) parts.push('Adult: ' + cats.adult.quantity); %>
                          <% if (cats.blackAuthorKids?.quantity) parts.push('BA Kids: ' + cats.blackAuthorKids.quantity); %>
                          <% if (cats.kids?.quantity) parts.push('Kids: ' + cats.kids.quantity); %>
                          <% if (cats.boardBooks?.quantity) parts.push('Board: ' + cats.boardBooks.quantity); %>
                          <%= parts.length > 0 ? parts.join(', ') : '-' %>
                        </small>
                      <% } else if (checkout.genres && checkout.genres.length > 0) { %>
                        <%= checkout.genres.join(', ') %>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (checkout.totalWeight || checkout.weight) { %>
                        <%= checkout.totalWeight || checkout.weight %> lbs
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">No checkouts recorded yet</p>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
