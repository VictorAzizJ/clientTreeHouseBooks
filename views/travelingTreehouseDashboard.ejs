<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Traveling Tree House Analytics</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <style>
    .stats-card {
      transition: transform 0.2s, box-shadow 0.2s;
      border: none;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .stats-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }
    .stats-icon {
      font-size: 2.5rem;
      opacity: 0.8;
    }
    .chart-container {
      position: relative;
      height: 300px;
    }
    .type-badge {
      font-size: 0.75rem;
      padding: 0.25rem 0.5rem;
      border-radius: 1rem;
    }
    .type-daycare { background-color: #17a2b8; color: white; }
    .type-branch { background-color: #28a745; color: white; }
    .type-community_event { background-color: #ffc107; color: #212529; }
    .zip-table {
      font-size: 0.9rem;
    }
    .zip-table .rank {
      width: 40px;
      text-align: center;
      font-weight: bold;
      color: var(--thb-primary);
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>

  <div class="container-fluid mt-4 px-4">
    <!-- Page Header -->
    <div class="row mb-4">
      <div class="col-12 d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
          <h1><i class="bi bi-graph-up-arrow"></i> Traveling Tree House Analytics</h1>
          <p class="text-muted mb-0">Performance metrics and insights for the mobile book distribution program</p>
        </div>
        <div class="d-flex gap-2">
          <a href="/traveling-treehouse" class="btn btn-outline-secondary">
            <i class="bi bi-list-ul"></i> View All Stops
          </a>
          <a href="/traveling-treehouse/new" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Record New Stop
          </a>
        </div>
      </div>
    </div>

    <!-- Summary Stats Cards -->
    <div class="row mb-4">
      <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card h-100">
          <div class="card-body d-flex align-items-center">
            <div class="stats-icon text-primary me-3">
              <i class="bi bi-geo-alt-fill"></i>
            </div>
            <div>
              <h3 class="mb-0"><%= overallStats.totalStops %></h3>
              <p class="text-muted mb-0">Total Stops</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card h-100">
          <div class="card-body d-flex align-items-center">
            <div class="stats-icon text-success me-3">
              <i class="bi bi-book-fill"></i>
            </div>
            <div>
              <h3 class="mb-0"><%= overallStats.totalBooks.toLocaleString() %></h3>
              <p class="text-muted mb-0">Books Distributed</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card h-100">
          <div class="card-body d-flex align-items-center">
            <div class="stats-icon me-3" style="color: var(--thb-orange);">
              <i class="bi bi-pin-map-fill"></i>
            </div>
            <div>
              <h3 class="mb-0"><%= overallStats.uniqueLocations %></h3>
              <p class="text-muted mb-0">Unique Locations</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card h-100">
          <div class="card-body d-flex align-items-center">
            <div class="stats-icon text-info me-3">
              <i class="bi bi-hash"></i>
            </div>
            <div>
              <h3 class="mb-0"><%= overallStats.avgBooksPerStop %></h3>
              <p class="text-muted mb-0">Avg Books/Stop</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Row 1 -->
    <div class="row mb-4">
      <!-- Monthly Stops Trend -->
      <div class="col-lg-6 mb-4">
        <div class="card h-100">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-graph-up"></i> Stops per Month (Last 12 Months)</h5>
          </div>
          <div class="card-body">
            <div class="chart-container">
              <canvas id="monthlyStopsChart"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Monthly Books Distributed -->
      <div class="col-lg-6 mb-4">
        <div class="card h-100">
          <div class="card-header" style="background-color: var(--thb-secondary); color: white;">
            <h5 class="mb-0"><i class="bi bi-book"></i> Books Distributed per Month</h5>
          </div>
          <div class="card-body">
            <div class="chart-container">
              <canvas id="monthlyBooksChart"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Row 2 -->
    <div class="row mb-4">
      <!-- Distribution by Type (Pie) -->
      <div class="col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-header" style="background-color: var(--thb-orange); color: white;">
            <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Stops by Type</h5>
          </div>
          <div class="card-body">
            <div class="chart-container">
              <canvas id="typeDistributionChart"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Stats by Type -->
      <div class="col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-header" style="background-color: var(--thb-primary-dark); color: white;">
            <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Performance by Type</h5>
          </div>
          <div class="card-body">
            <% Object.keys(statsByType).forEach(type => { %>
              <div class="mb-3 pb-3 border-bottom">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <span class="type-badge type-<%= type %>"><%= statsByType[type].label %></span>
                  <strong><%= statsByType[type].count %> stops</strong>
                </div>
                <div class="row text-center">
                  <div class="col-6">
                    <small class="text-muted d-block">Total Books</small>
                    <strong><%= statsByType[type].totalBooks.toLocaleString() %></strong>
                  </div>
                  <div class="col-6">
                    <small class="text-muted d-block">Avg/Stop</small>
                    <strong><%= statsByType[type].avgBooks %></strong>
                  </div>
                </div>
              </div>
            <% }); %>
            <% if (Object.keys(statsByType).length === 0) { %>
              <div class="text-center text-muted py-4">
                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                <p class="mt-2">No data yet</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Top ZIP Codes -->
      <div class="col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-geo"></i> Top ZIP Codes Served</h5>
          </div>
          <div class="card-body p-0">
            <% if (topZipCodes.length > 0) { %>
              <table class="table table-hover zip-table mb-0">
                <thead class="table-light">
                  <tr>
                    <th class="rank">#</th>
                    <th>ZIP Code</th>
                    <th class="text-center">Stops</th>
                    <th class="text-end">Books</th>
                  </tr>
                </thead>
                <tbody>
                  <% topZipCodes.forEach((zip, index) => { %>
                    <tr>
                      <td class="rank"><%= index + 1 %></td>
                      <td><%= zip.zip %></td>
                      <td class="text-center">
                        <span class="badge bg-secondary"><%= zip.count %></span>
                      </td>
                      <td class="text-end"><%= zip.books.toLocaleString() %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            <% } else { %>
              <div class="text-center text-muted py-4">
                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                <p class="mt-2">No data yet</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-5">
      <div class="col-12">
        <div class="card">
          <div class="card-body d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
              <h5 class="mb-1"><i class="bi bi-download"></i> Export Data</h5>
              <p class="text-muted mb-0">Download all Traveling Tree House data for reporting</p>
            </div>
            <div class="d-flex gap-2">
              <a href="/traveling-treehouse/export/csv" class="btn btn-outline-primary">
                <i class="bi bi-filetype-csv"></i> Export CSV
              </a>
              <a href="/traveling-treehouse/export/json" class="btn btn-outline-secondary">
                <i class="bi bi-filetype-json"></i> Export JSON
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // ─── Chart Data from Server ─────────────────────────────────────────────────
    const monthLabels = <%- JSON.stringify(monthLabels) %>;
    const monthlyStops = <%- JSON.stringify(monthlyStops) %>;
    const monthlyBooks = <%- JSON.stringify(monthlyBooks) %>;
    const statsByType = <%- JSON.stringify(statsByType) %>;

    // ─── Chart.js Configuration ─────────────────────────────────────────────────
    Chart.defaults.font.family = '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif';

    // Monthly Stops Line Chart
    new Chart(document.getElementById('monthlyStopsChart'), {
      type: 'line',
      data: {
        labels: monthLabels,
        datasets: [{
          label: 'Stops',
          data: monthlyStops,
          borderColor: '#6B8E23',
          backgroundColor: 'rgba(107, 142, 35, 0.1)',
          tension: 0.4,
          fill: true,
          pointBackgroundColor: '#6B8E23',
          pointBorderColor: '#fff',
          pointBorderWidth: 2,
          pointRadius: 4
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false },
          tooltip: {
            mode: 'index',
            intersect: false,
            callbacks: {
              label: (ctx) => `${ctx.parsed.y} stop${ctx.parsed.y !== 1 ? 's' : ''}`
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: { precision: 0 }
          }
        }
      }
    });

    // Monthly Books Bar Chart
    new Chart(document.getElementById('monthlyBooksChart'), {
      type: 'bar',
      data: {
        labels: monthLabels,
        datasets: [{
          label: 'Books Distributed',
          data: monthlyBooks,
          backgroundColor: '#8FBC8F',
          borderColor: '#6B8E23',
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false },
          tooltip: {
            mode: 'index',
            intersect: false,
            callbacks: {
              label: (ctx) => `${ctx.parsed.y.toLocaleString()} books`
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: { precision: 0 }
          }
        }
      }
    });

    // Type Distribution Doughnut Chart
    const typeLabels = Object.values(statsByType).map(t => t.label);
    const typeCounts = Object.values(statsByType).map(t => t.count);
    const typeColors = ['#17a2b8', '#28a745', '#ffc107']; // daycare, branch, event colors

    new Chart(document.getElementById('typeDistributionChart'), {
      type: 'doughnut',
      data: {
        labels: typeLabels,
        datasets: [{
          data: typeCounts,
          backgroundColor: typeColors,
          borderColor: '#fff',
          borderWidth: 2
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom',
            labels: {
              padding: 20,
              usePointStyle: true
            }
          },
          tooltip: {
            callbacks: {
              label: (ctx) => {
                const total = typeCounts.reduce((a, b) => a + b, 0);
                const percentage = total > 0 ? Math.round((ctx.parsed / total) * 100) : 0;
                return `${ctx.label}: ${ctx.parsed} (${percentage}%)`;
              }
            }
          }
        }
      }
    });
  </script>
</body>
</html>
