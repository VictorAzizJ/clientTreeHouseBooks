<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= donationType === 'new' ? 'New' : 'Used' %> Book Donation - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <style>
    .member-search-results {
      position: absolute;
      z-index: 1000;
      width: 100%;
      max-height: 300px;
      overflow-y: auto;
      background: white;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      display: none;
    }
    .member-search-item {
      padding: 10px;
      cursor: pointer;
      border-bottom: 1px solid #eee;
    }
    .member-search-item:hover {
      background-color: #f8f9fa;
    }
    .member-search-item:last-child {
      border-bottom: none;
    }
    .type-tabs .nav-link {
      font-weight: 500;
    }
    .type-tabs .nav-link.active {
      background-color: var(--thb-primary);
      color: white;
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-gift"></i> Book Donation</h1>
        <p class="text-muted">Record a book donation</p>
      </div>
      <a href="/dashboard" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
      </a>
    </div>

    <!-- Donation Type Tabs -->
    <ul class="nav nav-tabs type-tabs mb-4">
      <li class="nav-item">
        <a class="nav-link <%= donationType === 'used' ? 'active' : '' %>" href="/donations/new?type=used">
          <i class="bi bi-recycle"></i> Used Book Donation
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= donationType === 'new' ? 'active' : '' %>" href="/donations/new?type=new">
          <i class="bi bi-star"></i> New Book Donation
        </a>
      </li>
    </ul>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <div class="card">
      <div class="card-header" style="background-color: var(--thb-primary); color: white;">
        <h5 class="mb-0">
          <i class="bi bi-<%= donationType === 'new' ? 'star' : 'recycle' %>"></i>
          <%= donationType === 'new' ? 'New' : 'Used' %> Book Donation
        </h5>
      </div>
      <div class="card-body">
        <form method="POST" action="/donations">
          <input type="hidden" name="donationType" value="<%= donationType %>">

          <!-- Donor Type -->
          <div class="mb-3">
            <label class="form-label">Donor Type *</label>
            <select class="form-select" id="donorType" name="donorType" required>
              <option value="undisclosed">Undisclosed / Anonymous</option>
              <option value="person">Individual Person</option>
              <option value="organization">Organization</option>
            </select>
          </div>

          <!-- Person Search (when donorType = person) -->
          <div class="mb-3 position-relative" id="personSearchSection" style="display: none;">
            <label for="memberSearch" class="form-label">Select Person *</label>
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                id="memberSearch"
                placeholder="Search by name or email..."
                autocomplete="off"
              >
              <a href="/members/new" target="_blank" class="btn btn-outline-success" title="Add New Member">
                <i class="bi bi-person-plus"></i> New
              </a>
            </div>
            <div id="memberSearchResults" class="member-search-results"></div>
            <input type="hidden" id="memberId" name="memberId">
            <div id="selectedMember" class="mt-2" style="display:none;">
              <div class="alert alert-info">
                <i class="bi bi-person-check"></i> Selected: <strong id="selectedMemberName"></strong>
                <button type="button" class="btn btn-sm btn-outline-secondary float-end" onclick="clearMemberSelection()">Change</button>
              </div>
            </div>
          </div>

          <!-- Organization Search (when donorType = organization) -->
          <div class="mb-3 position-relative" id="orgSearchSection" style="display: none;">
            <label for="orgSearch" class="form-label">Select Organization *</label>
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                id="orgSearch"
                placeholder="Search organizations..."
                autocomplete="off"
              >
              <a href="/organizations/new" target="_blank" class="btn btn-outline-success" title="Add New Organization">
                <i class="bi bi-building-add"></i> New
              </a>
            </div>
            <div id="orgSearchResults" class="member-search-results"></div>
            <input type="hidden" id="organizationId" name="organizationId">
            <div id="selectedOrg" class="mt-2" style="display:none;">
              <div class="alert alert-info">
                <i class="bi bi-building"></i> Selected: <strong id="selectedOrgName"></strong>
                <button type="button" class="btn btn-sm btn-outline-secondary float-end" onclick="clearOrgSelection()">Change</button>
              </div>
            </div>
          </div>

          <!-- Number of Books -->
          <div class="mb-3">
            <label for="numberOfBooks" class="form-label">Number of Books *</label>
            <input
              type="number"
              class="form-control"
              id="numberOfBooks"
              name="numberOfBooks"
              value="1"
              min="1"
              max="100000"
              required
              onchange="updateMonetaryValue()"
              oninput="updateMonetaryValue()"
            >
          </div>

          <!-- Monetary Value - Different UI for used vs new -->
          <% if (donationType === 'used') { %>
          <!-- Used Books: Dropdown for $1 or $2 per book -->
          <div class="mb-3">
            <label for="valuePerBook" class="form-label">Book Value Rate</label>
            <select class="form-select" id="valuePerBook" name="valuePerBook" onchange="updateMonetaryValue()">
              <option value="1">$1 per book</option>
              <option value="2">$2 per book</option>
            </select>
            <div class="mt-2">
              <span class="text-muted">Estimated Value: </span>
              <strong id="calculatedValue">$1.00</strong>
            </div>
          </div>
          <% } else { %>
          <!-- New Books: Manual entry of total value -->
          <div class="mb-3">
            <label for="totalValue" class="form-label">Estimated Total Value ($)</label>
            <div class="input-group">
              <span class="input-group-text">$</span>
              <input
                type="number"
                class="form-control"
                id="totalValue"
                name="totalValue"
                min="0"
                step="0.01"
                placeholder="0.00"
              >
            </div>
            <small class="text-muted">Enter the estimated total value of the new books</small>
          </div>
          <% } %>

          <!-- Book Drive Indicator -->
          <div class="mb-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="isBookDrive" name="isBookDrive" value="true" onchange="toggleBookDriveName()">
              <label class="form-check-label" for="isBookDrive">
                Part of a Book Drive campaign?
              </label>
            </div>
            <div id="bookDriveNameSection" class="mt-2" style="display: none;">
              <input type="text" class="form-control" id="bookDriveName" name="bookDriveName" placeholder="Book drive name or description...">
            </div>
          </div>

          <!-- Notes -->
          <div class="mb-3">
            <label for="notes" class="form-label">Notes</label>
            <textarea class="form-control" id="notes" name="notes" rows="2" placeholder="Any additional notes..."></textarea>
          </div>

          <div class="text-end">
            <a href="/dashboard" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-circle"></i> Record Donation
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let memberDebounceTimer;
    let orgDebounceTimer;
    const donationType = '<%= donationType %>';

    // DOM Elements
    const memberSearchInput = document.getElementById('memberSearch');
    const memberSearchResults = document.getElementById('memberSearchResults');
    const memberIdInput = document.getElementById('memberId');
    const selectedMemberDiv = document.getElementById('selectedMember');
    const selectedMemberName = document.getElementById('selectedMemberName');

    const orgSearchInput = document.getElementById('orgSearch');
    const orgSearchResults = document.getElementById('orgSearchResults');
    const organizationIdInput = document.getElementById('organizationId');
    const selectedOrgDiv = document.getElementById('selectedOrg');
    const selectedOrgName = document.getElementById('selectedOrgName');

    // Toggle donor type sections
    function toggleDonorFields() {
      const donorType = document.getElementById('donorType').value;
      const personSection = document.getElementById('personSearchSection');
      const orgSection = document.getElementById('orgSearchSection');

      // Hide all
      personSection.style.display = 'none';
      orgSection.style.display = 'none';

      // Show relevant section
      if (donorType === 'person') {
        personSection.style.display = 'block';
      } else if (donorType === 'organization') {
        orgSection.style.display = 'block';
      }

      // Clear selections when switching
      clearMemberSelection();
      clearOrgSelection();
    }

    // Toggle book drive name field
    function toggleBookDriveName() {
      const isBookDrive = document.getElementById('isBookDrive').checked;
      const bookDriveNameSection = document.getElementById('bookDriveNameSection');
      bookDriveNameSection.style.display = isBookDrive ? 'block' : 'none';
    }

    // Update monetary value for used books
    function updateMonetaryValue() {
      if (donationType !== 'used') return;

      const numberOfBooks = parseInt(document.getElementById('numberOfBooks').value) || 0;
      const rate = parseInt(document.getElementById('valuePerBook').value) || 1;
      const totalValue = numberOfBooks * rate;

      document.getElementById('calculatedValue').textContent = '$' + totalValue.toFixed(2);
    }

    // Member search
    if (memberSearchInput) {
      memberSearchInput.addEventListener('input', function() {
        const query = this.value.trim();
        clearTimeout(memberDebounceTimer);

        if (query.length < 2) {
          memberSearchResults.style.display = 'none';
          return;
        }

        memberDebounceTimer = setTimeout(async () => {
          try {
            const response = await fetch(`/api/members/search?q=${encodeURIComponent(query)}`);
            const members = await response.json();

            if (members.length === 0) {
              memberSearchResults.innerHTML = '<div class="member-search-item text-muted">No members found</div>';
              memberSearchResults.style.display = 'block';
              return;
            }

            memberSearchResults.innerHTML = members.map(member => {
              const name = member.displayName || `${member.firstName} ${member.lastName}`;
              const subtext = member.subtext || '';
              const isChild = member.isChild || member.memberType === 'child';
              const typeLabel = isChild ? '<span class="badge bg-info ms-1">Child</span>' : '';

              return `
                <div class="member-search-item"
                     data-id="${member._id}"
                     data-name="${encodeURIComponent(name)}"
                     data-subtext="${encodeURIComponent(subtext)}"
                     data-is-child="${isChild}">
                  <strong>${escapeHtml(name)}</strong>${typeLabel}
                  ${subtext ? `<br><small class="text-muted">${escapeHtml(subtext)}</small>` : ''}
                </div>
              `;
            }).join('');

            memberSearchResults.querySelectorAll('.member-search-item').forEach(item => {
              item.addEventListener('click', function() {
                selectMember(
                  this.dataset.id,
                  decodeURIComponent(this.dataset.name),
                  decodeURIComponent(this.dataset.subtext || ''),
                  this.dataset.isChild === 'true'
                );
              });
            });

            memberSearchResults.style.display = 'block';
          } catch (err) {
            console.error('Member search failed:', err);
          }
        }, 300);
      });
    }

    // Organization search
    if (orgSearchInput) {
      orgSearchInput.addEventListener('input', function() {
        const query = this.value.trim();
        clearTimeout(orgDebounceTimer);

        if (query.length < 2) {
          orgSearchResults.style.display = 'none';
          return;
        }

        orgDebounceTimer = setTimeout(async () => {
          try {
            const response = await fetch(`/api/organizations/search?q=${encodeURIComponent(query)}`);
            const orgs = await response.json();

            if (orgs.length === 0) {
              orgSearchResults.innerHTML = '<div class="member-search-item text-muted">No organizations found</div>';
              orgSearchResults.style.display = 'block';
              return;
            }

            orgSearchResults.innerHTML = orgs.map(org => {
              const subtext = org.subtext || org.address || '';
              return `
                <div class="member-search-item"
                     data-id="${org.id || org._id}"
                     data-name="${encodeURIComponent(org.text || org.name)}">
                  <strong>${escapeHtml(org.text || org.name)}</strong>
                  ${subtext ? `<br><small class="text-muted">${escapeHtml(subtext)}</small>` : ''}
                </div>
              `;
            }).join('');

            orgSearchResults.querySelectorAll('.member-search-item').forEach(item => {
              item.addEventListener('click', function() {
                selectOrganization(
                  this.dataset.id,
                  decodeURIComponent(this.dataset.name)
                );
              });
            });

            orgSearchResults.style.display = 'block';
          } catch (err) {
            console.error('Organization search failed:', err);
          }
        }, 300);
      });
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function selectMember(id, name, subtext, isChild) {
      memberIdInput.value = id;
      // Show subtext (DOB for children, email for adults)
      const identifier = subtext || (isChild ? 'Child member' : '');
      selectedMemberName.textContent = name + (identifier ? ` (${identifier})` : '');
      selectedMemberDiv.style.display = 'block';
      memberSearchInput.style.display = 'none';
      memberSearchResults.style.display = 'none';
    }

    function clearMemberSelection() {
      if (memberIdInput) memberIdInput.value = '';
      if (selectedMemberDiv) selectedMemberDiv.style.display = 'none';
      if (memberSearchInput) {
        memberSearchInput.style.display = 'block';
        memberSearchInput.value = '';
      }
      if (memberSearchResults) memberSearchResults.style.display = 'none';
    }

    function selectOrganization(id, name) {
      organizationIdInput.value = id;
      selectedOrgName.textContent = name;
      selectedOrgDiv.style.display = 'block';
      orgSearchInput.style.display = 'none';
      orgSearchResults.style.display = 'none';
    }

    function clearOrgSelection() {
      if (organizationIdInput) organizationIdInput.value = '';
      if (selectedOrgDiv) selectedOrgDiv.style.display = 'none';
      if (orgSearchInput) {
        orgSearchInput.style.display = 'block';
        orgSearchInput.value = '';
      }
      if (orgSearchResults) orgSearchResults.style.display = 'none';
    }

    // Hide results when clicking outside
    document.addEventListener('click', function(e) {
      if (memberSearchInput && !memberSearchInput.contains(e.target) && !memberSearchResults.contains(e.target)) {
        memberSearchResults.style.display = 'none';
      }
      if (orgSearchInput && !orgSearchInput.contains(e.target) && !orgSearchResults.contains(e.target)) {
        orgSearchResults.style.display = 'none';
      }
    });

    // Initialize monetary value on page load for used books
    if (donationType === 'used') {
      updateMonetaryValue();
    }

    // Add event listener for donor type change
    const donorTypeSelect = document.getElementById('donorType');
    if (donorTypeSelect) {
      donorTypeSelect.addEventListener('change', toggleDonorFields);
    }
  </script>
</body>
</html>
