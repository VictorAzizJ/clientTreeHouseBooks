<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Book Donations - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-gift"></i> Book Donations</h1>
        <p class="text-muted"><%= totalDonations.toLocaleString() %> donations recorded</p>
      </div>
      <a href="/donations/new" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Record Donation
      </a>
    </div>

    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <!-- Filters -->
    <div class="card mb-4">
      <div class="card-body">
        <form method="GET" action="/donations" class="row g-3">
          <div class="col-md-3">
            <label for="search" class="form-label">Search Donor</label>
            <input type="text" class="form-control" id="search" name="search" value="<%= search %>" placeholder="Name or organization...">
          </div>
          <div class="col-md-2">
            <label for="donationType" class="form-label">Donation Type</label>
            <select class="form-select" id="donationType" name="donationType">
              <option value="">All Types</option>
              <option value="used" <%= donationType === 'used' ? 'selected' : '' %>>Used Books</option>
              <option value="new" <%= donationType === 'new' ? 'selected' : '' %>>New Books</option>
            </select>
          </div>
          <div class="col-md-2">
            <label for="donorType" class="form-label">Donor Type</label>
            <select class="form-select" id="donorType" name="donorType">
              <option value="">All Donors</option>
              <option value="person" <%= donorType === 'person' ? 'selected' : '' %>>Individual</option>
              <option value="organization" <%= donorType === 'organization' ? 'selected' : '' %>>Organization</option>
              <option value="undisclosed" <%= donorType === 'undisclosed' ? 'selected' : '' %>>Anonymous</option>
            </select>
          </div>
          <div class="col-md-2">
            <label for="dateFrom" class="form-label">From Date</label>
            <input type="date" class="form-control" id="dateFrom" name="dateFrom" value="<%= dateFrom %>">
          </div>
          <div class="col-md-2">
            <label for="dateTo" class="form-label">To Date</label>
            <input type="date" class="form-control" id="dateTo" name="dateTo" value="<%= dateTo %>">
          </div>
          <div class="col-md-1 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">
              <i class="bi bi-search"></i>
            </button>
          </div>
        </form>
        <div class="mt-2 d-flex justify-content-between">
          <div>
            <% if (search || donationType || donorType || dateFrom || dateTo) { %>
              <a href="/donations" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Clear Filters
              </a>
            <% } %>
          </div>
          <a href="/donations?format=csv<%= search ? '&search=' + encodeURIComponent(search) : '' %><%= donationType ? '&donationType=' + donationType : '' %><%= donorType ? '&donorType=' + donorType : '' %><%= dateFrom ? '&dateFrom=' + dateFrom : '' %><%= dateTo ? '&dateTo=' + dateTo : '' %>" class="btn btn-sm btn-success">
            <i class="bi bi-download"></i> Export CSV
          </a>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card text-center bg-light">
          <div class="card-body">
            <h3><%= totalDonations.toLocaleString() %></h3>
            <p class="text-muted mb-0">Total Donations</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center bg-light">
          <div class="card-body">
            <h3><%= stats.totalBooks.toLocaleString() %></h3>
            <p class="text-muted mb-0">Books (on page)</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center bg-light">
          <div class="card-body">
            <h3>$<%= stats.totalValue.toFixed(2) %></h3>
            <p class="text-muted mb-0">Value (on page)</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Donations Table -->
    <div class="card">
      <div class="card-body">
        <% if (donations && donations.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Type</th>
                  <th>Donor</th>
                  <th>Books</th>
                  <th>Value</th>
                  <th>Book Drive</th>
                  <th>Recorded By</th>
                  <% if (user.role === 'admin') { %><th>Actions</th><% } %>
                </tr>
              </thead>
              <tbody>
                <% donations.forEach(d => { %>
                  <tr>
                    <td><%= new Date(d.createdAt).toLocaleDateString() %></td>
                    <td>
                      <% if (d.donationType === 'new') { %>
                        <span class="badge bg-success">New</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Used</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (d.donorType === 'person' && d.member) { %>
                        <a href="/members/<%= d.member._id %>">
                          <i class="bi bi-person"></i> <%= d.member.firstName %> <%= d.member.lastName %>
                        </a>
                      <% } else if (d.donorType === 'organization' && d.organization) { %>
                        <a href="/organizations/<%= d.organization._id %>">
                          <i class="bi bi-building"></i> <%= d.organization.name %>
                        </a>
                      <% } else { %>
                        <span class="text-muted"><i class="bi bi-person-x"></i> Anonymous</span>
                      <% } %>
                    </td>
                    <td><%= d.numberOfBooks %></td>
                    <td>$<%= (d.monetaryAmount || 0).toFixed(2) %></td>
                    <td>
                      <% if (d.isBookDrive) { %>
                        <span class="badge bg-info"><%= d.bookDriveName || 'Yes' %></span>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (d.recordedBy) { %>
                        <%= d.recordedBy.firstName %> <%= d.recordedBy.lastName %>
                      <% } else { %>
                        -
                      <% } %>
                    </td>
                    <% if (user.role === 'admin') { %>
                    <td>
                      <a href="/donations/<%= d._id %>/edit" class="btn btn-sm btn-outline-warning" title="Edit">
                        <i class="bi bi-pencil"></i>
                      </a>
                    </td>
                    <% } %>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if (totalPages > 1) { %>
            <nav aria-label="Page navigation" class="mt-4">
              <ul class="pagination justify-content-center">
                <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
                  <a class="page-link" href="/donations?page=<%= page - 1 %>&limit=<%= limit %>&search=<%= encodeURIComponent(search) %>&donationType=<%= donationType %>&donorType=<%= donorType %>&dateFrom=<%= dateFrom %>&dateTo=<%= dateTo %>">
                    <i class="bi bi-chevron-left"></i> Previous
                  </a>
                </li>

                <%
                  let startPage = Math.max(1, page - 2);
                  let endPage = Math.min(totalPages, page + 2);
                  if (endPage - startPage < 4) {
                    if (startPage === 1) endPage = Math.min(totalPages, startPage + 4);
                    else startPage = Math.max(1, endPage - 4);
                  }
                %>

                <% if (startPage > 1) { %>
                  <li class="page-item">
                    <a class="page-link" href="/donations?page=1&limit=<%= limit %>&search=<%= encodeURIComponent(search) %>&donationType=<%= donationType %>&donorType=<%= donorType %>&dateFrom=<%= dateFrom %>&dateTo=<%= dateTo %>">1</a>
                  </li>
                  <% if (startPage > 2) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                  <% } %>
                <% } %>

                <% for (let i = startPage; i <= endPage; i++) { %>
                  <li class="page-item <%= i === page ? 'active' : '' %>">
                    <a class="page-link" href="/donations?page=<%= i %>&limit=<%= limit %>&search=<%= encodeURIComponent(search) %>&donationType=<%= donationType %>&donorType=<%= donorType %>&dateFrom=<%= dateFrom %>&dateTo=<%= dateTo %>"><%= i %></a>
                  </li>
                <% } %>

                <% if (endPage < totalPages) { %>
                  <% if (endPage < totalPages - 1) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                  <% } %>
                  <li class="page-item">
                    <a class="page-link" href="/donations?page=<%= totalPages %>&limit=<%= limit %>&search=<%= encodeURIComponent(search) %>&donationType=<%= donationType %>&donorType=<%= donorType %>&dateFrom=<%= dateFrom %>&dateTo=<%= dateTo %>"><%= totalPages %></a>
                  </li>
                <% } %>

                <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
                  <a class="page-link" href="/donations?page=<%= page + 1 %>&limit=<%= limit %>&search=<%= encodeURIComponent(search) %>&donationType=<%= donationType %>&donorType=<%= donorType %>&dateFrom=<%= dateFrom %>&dateTo=<%= dateTo %>">
                    Next <i class="bi bi-chevron-right"></i>
                  </a>
                </li>
              </ul>
            </nav>
            <p class="text-center text-muted">
              Page <%= page %> of <%= totalPages %> (<%= totalDonations.toLocaleString() %> total donations)
            </p>
          <% } %>
        <% } else { %>
          <div class="text-center py-5">
            <i class="bi bi-gift" style="font-size: 3rem; color: #ccc;"></i>
            <p class="text-muted mt-3">No donations found.</p>
            <a href="/donations/new" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> Record First Donation
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
