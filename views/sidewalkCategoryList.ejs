<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= category.name %> - Sidewalk Inventory</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <style>
    .category-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      border-radius: 2rem;
      color: white;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <div class="mb-2">
          <span class="category-badge" style="background-color: <%= category.color %>;">
            <i class="bi <%= category.icon %>"></i> <%= category.name %>
          </span>
        </div>
        <h1><i class="bi <%= category.icon %>"></i> <%= category.name %> Inventory</h1>
        <p class="text-muted"><%= category.description %></p>
      </div>
      <div>
        <a href="/sidewalk" class="btn btn-outline-secondary me-2">
          <i class="bi bi-arrow-left"></i> All Categories
        </a>
        <a href="/sidewalk/<%= category.id %>/new" class="btn btn-primary">
          <i class="bi bi-plus-lg"></i> Add Week
        </a>
      </div>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Week</th>
                <th class="text-center">Start</th>
                <th class="text-center">End</th>
                <th class="text-center">Change</th>
                <th class="text-center">% Change</th>
                <th class="text-center">Trend</th>
                <th>Location</th>
                <th>Notes</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (records && records.length > 0) { %>
                <% records.forEach(record => { %>
                  <tr>
                    <td>
                      <strong>
                        <%= new Date(record.weekStart).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %> -
                        <%= new Date(record.weekEnd).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                      </strong>
                    </td>
                    <td class="text-center">
                      <span class="badge bg-secondary"><%= record.startCount %></span>
                    </td>
                    <td class="text-center">
                      <span class="badge bg-secondary"><%= record.endCount %></span>
                    </td>
                    <td class="text-center">
                      <% if (record.change > 0) { %>
                        <span class="badge bg-success">+<%= record.change %></span>
                      <% } else if (record.change < 0) { %>
                        <span class="badge bg-warning text-dark"><%= record.change %></span>
                      <% } else { %>
                        <span class="badge bg-secondary">0</span>
                      <% } %>
                    </td>
                    <td class="text-center">
                      <% if (record.percentChange !== null) { %>
                        <small class="<%= record.percentChange > 0 ? 'text-success' : record.percentChange < 0 ? 'text-warning' : 'text-muted' %>">
                          <%= record.percentChange > 0 ? '+' : '' %><%= record.percentChange.toFixed(1) %>%
                        </small>
                      <% } else { %>
                        <small class="text-muted">-</small>
                      <% } %>
                    </td>
                    <td class="text-center">
                      <% if (record.trend === 'increasing') { %>
                        <i class="bi bi-arrow-up-circle-fill text-success" title="Increasing"></i>
                      <% } else if (record.trend === 'decreasing') { %>
                        <i class="bi bi-arrow-down-circle-fill text-warning" title="Decreasing"></i>
                      <% } else { %>
                        <i class="bi bi-dash-circle text-secondary" title="Stable"></i>
                      <% } %>
                    </td>
                    <td>
                      <% if (record.location) { %>
                        <small><%= record.location %></small>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (record.notes) { %>
                        <small class="text-muted" title="<%= record.notes %>">
                          <%= record.notes.substring(0, 30) %><%= record.notes.length > 30 ? '...' : '' %>
                        </small>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/sidewalk/<%= category.id %>/<%= record._id %>/edit" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil"></i> Edit
                      </a>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="9" class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">No records for <%= category.name %> yet</p>
                    <a href="/sidewalk/<%= category.id %>/new" class="btn btn-primary">
                      <i class="bi bi-plus-lg"></i> Add First Week
                    </a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Formula Reference -->
    <div class="card mt-4">
      <div class="card-header bg-light">
        <h6 class="mb-0"><i class="bi bi-calculator"></i> Formula Reference</h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-3">
            <strong>Change:</strong> End - Start
          </div>
          <div class="col-md-3">
            <strong>% Change:</strong> ((End - Start) / Start) Ã— 100
          </div>
          <div class="col-md-3">
            <strong>Trend:</strong> Based on change direction
          </div>
          <div class="col-md-3">
            <small class="text-muted">Same formulas apply to all sidewalk categories</small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
