<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Import Details - <%= importHistory.importType %> - TreeHouseBooks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/treehouse-brand.css">
  <style>
    .stat-card {
      border-left: 4px solid;
      padding: 1rem;
      margin-bottom: 1rem;
    }
    .stat-card.success { border-color: var(--thb-success); }
    .stat-card.danger { border-color: var(--thb-danger); }
    .stat-card.warning { border-color: var(--thb-warning); }
    .stat-card.info { border-color: var(--thb-info); }

    .error-item {
      background: #f8d7da;
      border: 1px solid #f5c2c7;
      border-radius: 0.375rem;
      padding: 0.75rem;
      margin-bottom: 0.5rem;
    }

    .timeline {
      position: relative;
      padding-left: 2rem;
    }
    .timeline::before {
      content: '';
      position: absolute;
      left: 0.5rem;
      top: 0;
      bottom: 0;
      width: 2px;
      background: #dee2e6;
    }
    .timeline-item {
      position: relative;
      padding-bottom: 1rem;
    }
    .timeline-item::before {
      content: '';
      position: absolute;
      left: -1.625rem;
      top: 0.25rem;
      width: 0.75rem;
      height: 0.75rem;
      border-radius: 50%;
      background: var(--thb-primary);
      border: 2px solid #fff;
    }
  </style>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container mt-4 mb-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><i class="bi bi-file-earmark-bar-graph"></i> Import Details</h1>
        <p class="text-muted">
          <%= importHistory.fileName %> -
          <span class="badge bg-primary"><%= importHistory.importType %></span>
        </p>
      </div>
      <div class="d-flex gap-2">
        <a href="/import/history" class="btn btn-outline-secondary">
          <i class="bi bi-list"></i> All Imports
        </a>
        <a href="/import" class="btn btn-outline-secondary">
          <i class="bi bi-cloud-upload"></i> New Import
        </a>
      </div>
    </div>

    <% if (success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <!-- Status and Stats -->
    <div class="row mb-4">
      <!-- Status -->
      <div class="col-md-12 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Import Status</h5>
            <div class="d-flex align-items-center gap-3">
              <% if (importHistory.status === 'completed') { %>
                <span class="badge bg-success fs-5">
                  <i class="bi bi-check-circle"></i> Completed
                </span>
              <% } else if (importHistory.status === 'failed') { %>
                <span class="badge bg-danger fs-5">
                  <i class="bi bi-x-circle"></i> Failed
                </span>
              <% } else if (importHistory.status === 'rolled_back') { %>
                <span class="badge bg-warning fs-5">
                  <i class="bi bi-arrow-counterclockwise"></i> Rolled Back
                </span>
              <% } else if (importHistory.status === 'processing') { %>
                <span class="badge bg-info fs-5">
                  <i class="bi bi-hourglass-split"></i> Processing
                </span>
              <% } else { %>
                <span class="badge bg-secondary fs-5"><%= importHistory.status %></span>
              <% } %>

              <div class="timeline ms-3">
                <div class="timeline-item">
                  <strong>Started:</strong> <%= new Date(importHistory.startedAt).toLocaleString() %>
                </div>
                <% if (importHistory.completedAt) { %>
                  <div class="timeline-item">
                    <strong>Completed:</strong> <%= new Date(importHistory.completedAt).toLocaleString() %>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Statistics -->
      <div class="col-md-3">
        <div class="stat-card info">
          <h3 class="mb-0"><%= importHistory.stats.totalRows %></h3>
          <small class="text-muted">Total Rows</small>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card success">
          <h3 class="mb-0 text-success"><%= importHistory.stats.successful %></h3>
          <small class="text-muted">Successful</small>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card danger">
          <h3 class="mb-0 text-danger"><%= importHistory.stats.failed %></h3>
          <small class="text-muted">Failed</small>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card warning">
          <h3 class="mb-0 text-warning"><%= importHistory.stats.skipped || 0 %></h3>
          <small class="text-muted">Skipped</small>
        </div>
      </div>
    </div>

    <!-- Import Metadata -->
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Import Information</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p><strong>Import Type:</strong> <%= importHistory.importType %></p>
            <p><strong>Source:</strong> <%= importHistory.source %></p>
            <p><strong>File Name:</strong> <%= importHistory.fileName %></p>
          </div>
          <div class="col-md-6">
            <p>
              <strong>Imported By:</strong>
              <%= importHistory.importedBy ? `${importHistory.importedBy.firstName} ${importHistory.importedBy.lastName}` : 'Unknown' %>
            </p>
            <p>
              <strong>Duration:</strong>
              <% if (importHistory.completedAt) { %>
                <%= Math.round((new Date(importHistory.completedAt) - new Date(importHistory.startedAt)) / 1000) %> seconds
              <% } else { %>
                In progress...
              <% } %>
            </p>
            <p><strong>Records Imported:</strong> <%= importHistory.importedRecords.length %></p>
          </div>
        </div>
        <% if (importHistory.notes) { %>
          <div class="mt-3">
            <strong>Notes:</strong>
            <p class="text-muted"><%= importHistory.notes %></p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Errors (if any) -->
    <% if (importHistory.errors && importHistory.errors.length > 0) { %>
      <div class="card mb-4">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0">
            <i class="bi bi-exclamation-triangle"></i>
            Errors (<%= importHistory.errors.length %>)
          </h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <input
              type="text"
              class="form-control"
              id="errorSearch"
              placeholder="Search errors..."
              onkeyup="filterErrors()"
            >
          </div>

          <div id="errorList" style="max-height: 500px; overflow-y: auto;">
            <% importHistory.errors.forEach(err => { %>
              <div class="error-item">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <strong>Row <%= err.row %>:</strong> <%= err.error || err.errors %>
                  </div>
                  <small class="text-muted">
                    <% if (err.data) { %>
                      <button
                        class="btn btn-sm btn-outline-secondary"
                        onclick="toggleData('error-<%= err.row %>')"
                      >
                        <i class="bi bi-eye"></i> View Data
                      </button>
                    <% } %>
                  </small>
                </div>
                <% if (err.data) { %>
                  <div id="error-<%= err.row %>" style="display: none;" class="mt-2">
                    <small class="text-muted">
                      <pre class="mb-0"><%= JSON.stringify(err.data, null, 2) %></pre>
                    </small>
                  </div>
                <% } %>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Actions -->
    <% if (importHistory.status === 'completed' && importHistory.importedRecords.length > 0) { %>
      <div class="card border-warning">
        <div class="card-header bg-warning">
          <h5 class="mb-0">
            <i class="bi bi-exclamation-triangle"></i> Rollback Import
          </h5>
        </div>
        <div class="card-body">
          <p class="mb-3">
            This will <strong>permanently delete</strong> all <%= importHistory.importedRecords.length %> records
            that were created by this import. This action cannot be undone.
          </p>
          <form method="POST" action="/import/rollback/<%= importHistory._id %>" onsubmit="return confirmRollback()">
            <button type="submit" class="btn btn-warning">
              <i class="bi bi-arrow-counterclockwise"></i> Rollback Import
            </button>
          </form>
        </div>
      </div>
    <% } %>

    <% if (importHistory.status === 'rolled_back') { %>
      <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        This import has been rolled back. All imported records have been deleted.
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function toggleData(id) {
      const element = document.getElementById(id);
      element.style.display = element.style.display === 'none' ? 'block' : 'none';
    }

    function filterErrors() {
      const searchTerm = document.getElementById('errorSearch').value.toLowerCase();
      const errorItems = document.querySelectorAll('.error-item');

      errorItems.forEach(item => {
        const text = item.textContent.toLowerCase();
        item.style.display = text.includes(searchTerm) ? 'block' : 'none';
      });
    }

    function confirmRollback() {
      return confirm(
        'Are you absolutely sure you want to rollback this import?\n\n' +
        'This will permanently delete <%= importHistory.importedRecords.length %> records.\n\n' +
        'This action CANNOT be undone!'
      );
    }
  </script>
</body>
</html>
